                                </div>
                            </div>
                        </div>
                        <div class="row top-buffer">
                            <div class="clearfix igr col-md-12">
                                <div class="col-md-2">
                                    <label for="inputUserId">
                                        @VModelList.CylinderCapacity&nbsp;<span class="text-danger">*</span>
                                    </label>
                                </div>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(m => m.CC, new { @id = "CC", @maxlength = 50, @class = "col-lg-12 form-control" })
                                    @Html.ValidationMessageFor(m => m.CC)
                                </div>
                                <div class="col-md-2">
                                    <label for="inputUserId">
                                        @VModelList.Tonnage&nbsp;<span class="text-danger">*</span>
                                    </label>
                                </div>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(m => m.LC, new { @id = "LC", @maxlength = 50, @class = "col-lg-12 form-control" })
                                    @Html.ValidationMessageFor(m => m.LC)
                                </div>
                            </div>
                        </div>
                        <div class="row top-buffer">
                            <div class="clearfix igr col-md-12">
                                <div class="col-md-2">
                                    <label for="inputUserId">
                                        @VModelList.NoofPassenger
                                    </label>
                                </div>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(m => m.NoOfPassenger, new { @id = "NoOfPassenger", @maxlength = 10, @class = "col-lg-12 form-control" })
                                </div>
                                <div class="col-md-2">
                                    <label for="inputGroupCode">
                                        @Common.Status&nbsp;<span class="text-danger">*</span>
                                    </label>
                                </div>
                                <div class="col-md-3">
                                    @Html.DropDownListFor(m => m.Status, new SelectList(Model.Statuslist, "Lookup_value", "Lookup_desc", "Active"), new { @class = "col-lg-12 form-control" })
                                    @Html.ValidationMessageFor(m => m.Status)<br />
                                    <br />
                                    <br />
                                </div>
                            </div>
                        </div>
                        <div class="row top-buffer">
                        </div>
                        <div class="row top-buffer">
                        </div>
                        <div class="row top-buffer">
                        </div>
                        <div class="row">
                            <div class="clearfix igr col-md-12 text-center">
                                @if (@myPemissions.Write)
                                {
                                    <button id="btnSave" style="display:@btndisplay"   class="btn btn-primary btn-info">
                                        @Common.Save</button>
                                }
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                @Html.ActionLink(Common.Back, "VModelIndex", null, new { @class = "btn btn-info" })
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel">
            @Html.Partial("~/Views/Shared/_TimeStamp.cshtml", Model)
        </div>
    </div>
</div>
<script type="text/javascript">


    $(document).ready(function () {
        //   loadMakecodeList();
        //   loadVehicleClass();
    });


    function loadMakecodeList() {
        $.ajax({
            url: '@(Url.Action("FillMakeCodeList"))',
            cache: false,
            success: function (data) {
                $("#ddlMake").empty();
                $.each(data, function (index, optiondata) {
                    $("#ddlMake").append("<option value='" + optiondata.MakeCode + "'>" + optiondata.MakeName + "</option>");
                });
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }

    function loadVehicleClass() {
        $.ajax({
            url: '@(Url.Action("FillVehicleClassList"))',
            cache: false,
            success: function (data) {
                $("#ddlBody").empty();
                $.each(data, function (index, optiondata) {
                    $("#ddlBody").append("<option value='" + optiondata.VehicleClassCode + "'>" + optiondata.VehicleClassDesc + "</option>");
                });
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }

    if ('@pageMode' == 'View') {
        $('#losstypeform').find('input, textarea, button, select').attr('disabled', 'disabled');
    }

</script>
