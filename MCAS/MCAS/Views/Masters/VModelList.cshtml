    ViewBag.Title = VModelList.Title;
    var mMCASQueryString = Html.MCASQueryString(Request.QueryString);
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    var pageMode = mMCASQueryString["pageMode"];
    var btndisplay = "yes";
    if (pageMode == "View")
    {
        btndisplay = "none";
    }


    var VehicleModelCode = Model.ModelCode == null ? null : Model.ModelCode;
    var dis = TempData["notice"] == "" ? null : VehicleModelCode == null ? "none;" : "Block";

