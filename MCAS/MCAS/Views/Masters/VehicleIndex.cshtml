@model  IEnumerable<MCAS.Web.Objects.MastersHelper.VehicleMakeModel>
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Web.Objects.Resources.Masters;
@using MCAS.Web.Objects.Resources.Common;
@using MCAS.Globalisation
@{
    //ViewBag.Title = "VehicleIndex";
    ViewBag.Title = VehicleIndex.Title;
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    @Html.Hidden("oldgroup", 1)
    SecurityPermissions myPemissions = (MCAS.Web.Objects.CommonHelper.SecurityPermissions)ViewData["UserPermissions"];
}
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <div class="container">
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    @Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@VehicleIndex.VehiclesMake</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            @VehicleIndex.VehiclesMake
                        </h3>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="panel panel-info">
                                <div class="panel-sub-heading">
                                    <span class="text-danger">*</span>@Common.SearchScreen
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("VehicleIndex", "Masters", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                                    {
             
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4 " for="MakeCode">
                                                        @VehicleIndex.VehicleMakeCode</label>
                                                    <div class="col-sm-6">
                                                        <input type="text" placeholder="" value="@ViewBag.Makecode" name="MakeCode" id="MakeCode" class="form-control"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4" for="MakeName">
                                                        @VehicleIndex.VehicleMakeName</label>
                                                    <div class="col-sm-6">
                                                        <input type="text" placeholder="" value="@ViewBag.makename" name="MakeName" id="MakeName" class="form-control"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
               
             
                                        <div class="row top-buffer">
                                        </div>
                                        <div class="row top-buffer">
                                        </div>    
                        
                
                                        
                
                                        <div class="row">
                                            <div class="col-lg-12 text-center">
                                                <button type="submit" id="btnSubmit" class="btn btn-info">
                                                    @Common.Search</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                @if (@myPemissions.Write)
                                                {
                                                    @Html.ActionLink(Common.AddNew, "VehicleMaster", "Masters",new{}, new { @class = "btn btn-info" })
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h4 class="text-info">
                                    @Common.SearchResults</h4>
                                <hr />
                            </div>
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <div class="row-fluid">
                                        <div class="dataTables_wrapper" id="Diary_wrapper" role="grid">
                                            <table cellspacing="0" width="100%" id="tableDiarySrc" class="table table-striped table-hover display">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 20%;">
                                                           @VehicleIndex.VehicleMakeCode
                                                        </th>
                                                        <th style="width: 50%;">
                                                           @VehicleIndex.VehicleMakeName
                                                        </th>
                                                        <th style="width: 10%;">
                                                            @Common.Status
                                                        </th>
                                                        <th style="width: 20%;">
                                                            <span class="block text-right">@Common.Select</span>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        int trid = 1;
                                                        int rowmatch = 0;
                                                        var display = "";
                                                        var strNote = "";
                                                        foreach (var item in Model)
                                                        {
                                                            rowmatch += 1;
                                                                                                            
                                                        <tr group='@(trid)' style="display:@display;">
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.MakeCode)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.MakeName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Status)
                                                            </td>
                                                            <td>
                                                                @if (@myPemissions.Write)
                                                                {
                                                                    @Html.EncodedActionLink(Common.Edit, "VehicleMaster", "Masters", new { TranId = item.TranId, pageMode = "Edit" }, new { @class = "btn btn-xs btn-warning" })   
                                                                }
                                                                @if (@myPemissions.Read)
                                                                {    
                                                                    @Html.EncodedActionLink(Common.View, "VehicleMaster", "Masters", new { TranId = item.TranId, pageMode = "View" }, new { @class = "btn btn-xs btn-info" })   
                                                                }
                                                            </td>
                                                        </tr>
                                   
                                                        }}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
