@model  IEnumerable<MCAS.Web.Objects.MastersHelper.VehicleTypeModel>
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Web.Objects.Resources.Masters;
@using MCAS.Web.Objects.Resources.Common
@using MCAS.Globalisation
@{
    //ViewBag.Title = "VehicleClassIndex";
    ViewBag.Title = VehicleClassIndex.Title;
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    @Html.Hidden("oldgroup", 1)
    SecurityPermissions myPemissions = (MCAS.Web.Objects.CommonHelper.SecurityPermissions)ViewData["UserPermissions"];
}
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <!-- Bootstrap Container Start -->
    <div class="container">
        <!-- Page title start -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    @Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@VehicleClassIndex.VehicleClass</li>
                </ul>
            </div>
        </div>
        <!-- Page title end -->
        <hr />
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            @VehicleClassIndex.VehicleClass
                        </h3>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="panel panel-info">
                                <div class="panel-sub-heading">
                                    <span class="text-danger">*</span><strong>@Common.SearchScreen</strong>
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("VehicleClassIndex", "Masters", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                                    {
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4 " for="inputBodyCode">
                                                        @VehicleClassIndex.VehicleClassCode</label>
                                                    <div class="col-sm-6">
                                                        <input type="text" placeholder="" value="@ViewBag.bodycode" name="inputBodyCode" id="inputBodyCode" class="form-control"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4" for="inputBodyDescription">
                                                        @VehicleClassIndex.VehicleClassDescription</label>
                                                    <div class="col-sm-6">
                                                        <input type="text" placeholder="" value="@ViewBag.bodydesc"  name="inputBodyDescription" id="inputBodyDescription" class="form-control"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                            
                                        <div class="row top-buffer">
                                        </div>
                                        <div class="row top-buffer">
                                        </div> 
                                        <div class="row">
                                            <div class="col-lg-12 text-center">
                                                @*<button type="submit" class="btn btn-primary">
                                        Back</button>*@
                                                <button type="submit" class="btn btn-info">
                                                    @Common.Search</button>
                                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                @if (@myPemissions.Write)
                                                {
                                                    @Html.ActionLink(Common.AddNew, "VehicleClassEditor", "Masters",new{}, new { @class = "btn btn-info" })
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Row End -->
                    <!-- Row Start -->
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h4 class="text-info">
                                    @Common.SearchResults</h4>
                                <hr>
                            </div>
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <div class="row-fluid">
                                        <div class="dataTables_wrapper" id="Diary_wrapper" role="grid">
                                            <table id="tableDiarySrc" width="100%" cellspacing="0" class="table table-striped table-hover display">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 20%; padding-left: 9px">
                                                            @VehicleClassIndex.VehicleClassCode
                                                        </th>
                                                        <th style="width: 50%; padding-left: 9px">
                                                            @VehicleClassIndex.VehicleClassDescription
                                                        </th>
                                                        <th style="width: 15%; padding-left: 9px">
                                                            @Common.Status
                                                        </th>
                                                        <th style="width: 15%;">
                                                            <span class="block text-right">@Common.Select</span>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        int trid = 1;
                                                        int rowmatch = 0;
                                                        var display = "";
                                                        var strNote = "";
                                                        foreach (var item in Model)
                                                        {
                                                            rowmatch += 1;
                                                            var strStatus = (item.Status == "Active") ? "Active" : "Inactive";
                                
                                                        <tr group='@(trid)' style="display:@display;">
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.VehicleClassCode)
                                                            </td>
                                                            <td>@Html.DisplayFor(modelItem => item.VehicleClassDesc)
                                                            </td>
                                                            <td>@strStatus
                                                            </td>
                                                            <td>
                                                                @if (@myPemissions.Write)
                                                                {
                                                                    @Html.EncodedActionLink(Common.Edit, "VehicleClassEditor", new { TranId = item.TranId, pageMode = "Edit" }, new { @class = "btn btn-xs btn-warning" }) 
                                                                }
                                                                @if (@myPemissions.Read)
                                                                {
                                                                    @Html.EncodedActionLink(Common.View, "VehicleClassEditor", new { TranId = item.TranId, pageMode = "View" }, new { @class = "btn btn-xs btn-info" })
                                                                }
                                                            </td>
                                                        </tr>
                               
                                                        }}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Row End -->
                </div>
                <!-- Bootstrap Container End -->
            </div>
        </div>
    </div>
</div>
