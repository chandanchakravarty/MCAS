@model MCAS.Web.Objects.MastersHelper.VehicleBusCaptainModel
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Globalisation
@{
    ViewBag.Title = "VehicleBusCaptainEditor";
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    //var pageMode = Request.QueryString["pageMode"] != null ? Convert.ToString(Request.QueryString["pageMode"]) : "";
    var mMCASQueryString = Html.MCASQueryString(Request.QueryString);
    var pageMode = mMCASQueryString["pageMode"];
    var btndisplay = pageMode == "View" ? "none" : "inline";
    var buscaptaincode = Model.BusCaptainCode == null ? "" : Model.BusCaptainCode;
    var dis = TempData["display"] == "" ? null : buscaptaincode == "" ? "none;" : "Block";
    SecurityPermissions myPemissions = (SecurityPermissions)ViewData["UserPermissions"];
    System.Resources.ResourceManager PageResource = (new MCAS.Web.Objects.MastersHelper.TransactionModel()).GetResourceManager(Model.Resource);
}
<link href="@Url.Content("~/Content/jquery-ui.css")" rel="Stylesheet" media="screen" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/globalize/globalize.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/globalize/cultures/globalize.culture.en-GB.js")" type="text/javascript"></script>
<div class="dashboard-wrapper">
    <div class="container">
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>@MCAS.Web.Objects.Resources.Common.Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@PageResource.GetString("UploadMainMenu")</li>
                </ul>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            @PageResource.GetString("BusCaptainListingDetails")</h3>
                    </div>
                    <div style="color: Red; font-weight: bold;" class="has-error" id="error">
                        <p align="center">
                            @if (TempData["result"] != null)
                            {
                                @TempData["result"]
                            }
                        </p>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("VehicleBusCaptainEditor", "Masters", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "buscaptainform", name = "buscaptainform" }))
                        {
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => m.TranId)
                            
                            <div class="row top-buffer">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputBusCaptainCode">
                                            @PageResource.GetString("BusCaptainCode")&nbsp;<span class="text-danger">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.BusCaptainCode, new { id = "BusCaptainCode", @class = "col-lg-12 form-control", @len = 7 })
                                        @Html.ValidationMessageFor(m => m.BusCaptainCode)
                                    </div>
                                    <div class="col-md-2">
                                        <label for="inputBusCaptainName">
                                            @PageResource.GetString("Name")&nbsp;<span class="text-danger">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.BusCaptainName, new { id = "inputBusCaptainName", @class = "col-lg-12 form-control", @maxlength = "150" })
                                        @Html.ValidationMessageFor(m => m.BusCaptainName)
                                    </div>
                                </div>
                            </div>    
                            
                            <div class="row top-buffer">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputNricCode">
                                            @PageResource.GetString("NRICPassportNo")&nbsp;<span class="text-danger">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.NRICPassportNo, new { id = "inputNricPassportNo", @maxlength = "50", @class = "col-lg-12 form-control" })
                                        @Html.ValidationMessageFor(m => m.NRICPassportNo)
                                    </div>
                                    <div class="col-md-2">
                                        <label>
                                            @PageResource.GetString("DateJoined")&nbsp;</label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.DateJoined, "{0:d}", new { @maxlength = "10", id = "txtDateOfJoin", @class = "col-lg-12 form-control datepicker" })
                                        @Html.ValidationMessageFor(m => m.DateJoined)
                                    </div>
                                </div>
                            </div>
                            <div class="row top-buffer">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label>
                                            @PageResource.GetString("DateResigned")&nbsp;
                                        </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.DateResigned, "{0:d}", new { @maxlength = "10", id = "txtDateOfResign", @class = "col-lg-12 form-control datepicker" })
                                        @Html.ValidationMessageFor(m => m.DateResigned)
                                    </div>
                                    <div class="col-md-2">
                                        <label for="inputNationality">
                                            @PageResource.GetString("Nationality")&nbsp;<span class="text-danger">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.Nationality, new { id = "inputNationality", @maxlength = "100", @class = "col-lg-12 form-control" })
                                        @Html.ValidationMessageFor(m => m.Nationality)
                                    </div>
                                </div>
                            </div>
                            <div class="row top-buffer">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label>
                                        </label>
                                    </div>
                                    <div class="col-md-3">
                                    </div>
                                </div>
                            </div>
                            <div class="row top-buffer">
                            </div>
                            <div class="row top-buffer">
                            </div>
                            
                            <div class="row top-buffer">
                                <div class="clearfix igr col-md-12 text-center">
                                    @if (@myPemissions.Write)
                                    {
                                        <button id="btnSave" style="display:@btndisplay" class="btn btn-info">
                                            @PageResource.GetString("Save")</button>
                                    }
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    @Html.ActionLink(@PageResource.GetString("Back"), "BusCaptainListingMaster", null, new { @class = "btn btn-info" })&nbsp;&nbsp;&nbsp;&nbsp;
                                </div>
                            </div>
                            
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="panel">
            @Html.Partial("~/Views/Shared/_TimeStamp.cshtml", Model)
        </div>
    </div>
</div>
<script type="text/javascript">

    var do_on_load = function () {
        $(document).on("focus", ":input", function () { $(this).attr("autocomplete", "off") });
        $(".datepicker").datepicker({ dateFormat: "dd/mm/yy", showStatus: !0, showWeeks: !0, currentText: "Now", autoSize: !0, gotoCurrent: !0, showAnim: "blind", highlightWeek: !0, changeMonth: !0, changeYear: !0, yearRange: "1951:2050", onSelect: function () { $(this).valid() } });
        $.culture = Globalize.culture("en-GB");
        $.validator.methods.date = function (value, element) { return this.optional(element) || Globalize.parseDate(value, "dd/MM/yyyy", "en-GB") || Globalize.parseDate(value, "yyyy-mm-dd"); };
        $.validator.unobtrusive.adapters.add("notequalto", ["other"], function (b) { b.rules.notEqualTo = "#" + b.params.other; b.message && (b.messages.notEqualTo = b.message) });
        $.validator.addMethod("notEqualTo", function (b, e, g) { return this.optional(e) || b != $(g).val() }, "");
        DatepickerLen();
        debugger;
        $("#inputContactNo").blur(function (a) { "" != $.trim($(this).val()) && MobileNumberLengthCheck("inputContactNo", "Contact No. should be in proper format."); });
        '@pageMode' == 'View' && $('#BusCaptainCode,#inputBusCaptainName,#inputNricPassportNo,#txtDateOfJoin,#txtDateOfResign,#inputNationality').attr("disabled", "disabled");

        $("#BusCaptainCode").blur(function (event) {
            var buscaptain = $.trim($("#BusCaptainCode").val());
            $.ajax({
                type: "POST",
                url: '@Url.Action("CheckBusCaptainCode", "Masters")',
                data: {
                    BuscaptainCode: buscaptain,
                    Bcode: '@buscaptaincode'
                },
                success: function (a) {
                    if (a == true && (getQueryVariable("pageMode") != "Edit")) {
                        alert("Duplicate Bus Captain Code.");
                        $("#btnSave").attr("disabled", "disabled");
                    }
                    else if (($("#inputBusCaptainCode").val() != '@buscaptaincode') && a == true) {
                        alert("Duplicate Bus Captain Code.", "inputBusCaptainCode");
                        $("#btnSave").attr("disabled", "disabled");
                    }
                    else {
                        $("#btnSave").removeAttr("disabled");
                    }

                }
            });
        });
    };

    $(document).ready(do_on_load);
    $(window).bind("page:change", do_on_load);
    function DatepickerLen() {
        $("input[type=text]").each(function () {
            $(this).hasClass("datepicker") && 10 < $(this).val().length && $(this).val($(this).val().substring(0, 10));
            if (void 0 !== $(this).attr("data-val-date") && "The field " == $(this).attr("data-val-date").substring(0, 10)) {
                var b = $(this).attr("data-val-date").substring(10, $(this).attr("data-val-date").length).replace("must be a date.", "must be in 'dd/mm/yyyy' format.");
                $(this).removeAttr("data-val-date");
                $(this).attr("data-val-date", b)
            };
        });
    };
    function MobileNumberLengthCheck(ControlId, Msg) {
        if ($.trim($("#" + ControlId).val()).length < 3 || $.trim($("#" + ControlId).val()).length > 15) {
            alert(Msg, ControlId);
            return false;
        }
    };
    function getQueryVariable(a) {
        for (var e = "@MenuListItem.ClaimTabs.GetQueryStringVal()".replace(/amp;/ig, "").split("&"), d = 0; d < e.length; d++) {
            var b = e[d].split("=");
            if (b[0] == a) return b[1]
        }
    };
    $("#btnSave").click(function (event) {
        var dateOfJoin = $("#txtDateOfJoin").val();
        var dateOfResign = $("txtDateOfResign").val();

        if (dateOfJoin != "" && dateOfResign != "") {

            from = $("#txtDateOfJoin").val().split("/");
            dateOfJoin = new Date(from[2], from[1] - 1, from[0]);

            to = $("#txtDateOfResign").val().split("/");
            dateOfResign = new Date(to[2], to[1] - 1, to[0]);

            if (dateOfJoin >= dateOfResign) {
                alert("Date Resigned cannot be less than Date Joined");
                event.preventDefault();
                return false;
            }
        }

    });
</script>
