@model IEnumerable<MCAS.Web.Objects.MastersHelper.CommonMasterModel>
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Globalisation
@{
    ViewBag.Title = "CommonMasterIndex";
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    SecurityPermissions myPemissions = (MCAS.Web.Objects.CommonHelper.SecurityPermissions)ViewData["UserPermissions"];
    System.Resources.ResourceManager PageResource = (new MCAS.Web.Objects.MastersHelper.TransactionModel()).GetResourceManager(Convert.ToString(ViewData["PageResource"]));
}
<style type="text/css">
    fieldset
    {
        padding: 5px;
        margin: 1px;
        border: 1px solid;
        border-color: #DAD7D7;
    }
    
    label
    {
        color: #6D644F;
        font: normal 12px 'Open Sans' , arial, sans-serif;
        font-weight: bold;
        display: inline-block;
        margin-bottom: 5px;
    }
    legend
    {
        display: block;
        width: auto;
        padding: 1px;
        margin-bottom: 2px;
        font-size: 14px;
        line-height: inherit;
        color: #1e91cf !important;
        border: 0;
    }
    #tableDiarySrc td, #tableDiarySrc th
    {
        word-break: break-all;
    }
</style>
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <div class="container">
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>@MCAS.Web.Objects.Resources.Common.Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@PageResource.GetString("Common")</li>
                </ul>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">@PageResource.GetString("Common")</h3>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="panel panel-info">
                                <div class="panel-sub-heading">
                                    <span class="text-danger">*</span>@PageResource.GetString("SearchScreen")
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("CommonMasterIndex", "Masters", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "CommonMasterForm", name = "CommonMasterForm" }))
                                    {
                            
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4">@PageResource.GetString("Category")</label>
                                                    <div class="col-sm-6">
                                                        <select name="ddlMaster" value="" id="ddlMaster" class="form-control">
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4">@PageResource.GetString("Lookupdesc")</label>
                                                    <div class="col-sm-6">
                                                        <input type="text" placeholder="" value="@ViewBag.ValueDesc" name="inputValueDescription" id="inputValueDescription" class="form-control"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4">@PageResource.GetString("Lookupvalue")</label>
                                                    <div class="col-sm-6">
                                                        <input placeholder="" value="@ViewBag.ValueCode" name="inputValueCode" id="inputValueCode" class="form-control "/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4">@PageResource.GetString("IsActive")</label>
                                                    <div class="col-sm-6">
                                                        <select name="ddlStatusCode" id="ddlStatusCode" value="@ViewBag.Status" class="form-control">
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                            
                                                        
                                        <div class="row">
                                            <div style="text-align: center" class="col-lg-12 center-block">
                                                <button type="submit" class="btn btn-info">
                                                    @PageResource.GetString("Search")</button>
                                                &nbsp;&nbsp;&nbsp;&nbsp;
                                                @if (@myPemissions.Write)
                                                {
                                                    @Html.ActionLink(@PageResource.GetString("AddNew"), "CommonMasterEditor", "Masters", new { }, new { @class = "btn btn-info" })
                                
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h4 class="text-info">@PageResource.GetString("SearchResults")</h4>
                                <hr>
                            </div>
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <div class="row-fluid">
                                        <div class="dataTables_wrapper" id="Diary_wrapper" role="grid">
                                            <table id="tableDiarySrc" style="width: 100%" class="table table-striped table-hover display" style="word-wrap: break-word; table-layout: fixed;">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 20%; padding-left: 9px">
                                                            @PageResource.GetString("Category")
                                                        </th>
                                                        <th style="width: 20%; padding-left: 9px">
                                                            @PageResource.GetString("Lookupdesc")
                                                        </th>
                                                        <th style="width: 20%; padding-left: 9px">
                                                            @PageResource.GetString("Lookupvalue")
                                                        </th>
                                                        <th style="width: 20%; padding-left: 9px">
                                                            @PageResource.GetString("IsActive")
                                                        </th>
                                                        <th style="width: 20%">
                                                            <span class="block text-right">@PageResource.GetString("Select")</span>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        var status = "";

                                                        foreach (var item in Model)
                                                        {
                                                            status = item.IsActive == "Y" ? "Active" : "Inactive";

                                                        <tr>
                                                            <td>
                                                                @item.LookUpCategoryDesc
                                                            </td>
                                                            <td>
                                                                @item.Lookupdesc
                                                            </td>
                                                            <td>
                                                                @item.Lookupvalue
                                                            </td>
                                                            <td>
                                                                @status
                                                            </td>
                                                            <td>
                                                                @if (@myPemissions.Write)
                                                                {
                                                                    @Html.EncodedActionLink(@PageResource.GetString("Edit"), "CommonMasterEditor", new { pageMode = "Edit", uid = item.LookupID }, new { @class = "btn btn-xs btn-warning" })
                                                                }
                                                                @if (@myPemissions.Read)
                                                                {
                                                                    @Html.EncodedActionLink(@PageResource.GetString("View"), "CommonMasterEditor", new { pageMode = "View", uid = item.LookupID }, new { @class = "btn btn-xs btn-info" })
                                                                }
                                                            </td>
                                                        </tr>
                                   
                                                        }}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var do_on_load = function () {
        loadMasterDescriptionList();
        loadStatus();
        $(document).on("focus", ":input", function () { $(this).attr("autocomplete", "off") });
    }

    function loadMasterDescriptionList() {
        $.ajax({
            url: '@(Url.Action("FillMasterDescriptionList"))',
            cache: false,
            success: function (data) {
                $("#ddlMaster").empty();
                $.each(data, function (index, optiondata) {
                    if (optiondata.LookUpCategoryCode == '@ViewBag.MasterDesc')
                        $("#ddlMaster").append("<option value='" + optiondata.LookUpCategoryCode + "' selected=selected>" + optiondata.LookUpCategoryDesc + "</option>");
                    else
                        $("#ddlMaster").append("<option value='" + optiondata.LookUpCategoryCode + "'>" + optiondata.LookUpCategoryDesc + "</option>");
                });
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }

    function loadStatus() {
        $.ajax({
            url: '@(Url.Action("FillStatus"))',
            cache: false,
            success: function (data) {
                $("#ddlStatusCode").empty();
                $.each(data, function (index, optiondata) {
                    if (optiondata.Lookup_value == '@ViewBag.Status')
                        $("#ddlStatusCode").append("<option value='" + optiondata.Lookup_value + "' selected=selected>" + optiondata.Lookup_desc + "</option>");
                    else
                        $("#ddlStatusCode").append("<option value='" + optiondata.Lookup_value + "'>" + optiondata.Lookup_desc + "</option>");
                });
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }


    $(document).ready(do_on_load);
    $(window).bind('page:change', do_on_load);
</script>
