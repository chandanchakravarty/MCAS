<!DOCTYPE html>
<html>
<head>
    <title>ComfortDelGro Insurance Brokers Pte Ltd</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Ebix Software Pvt. Ltd." />
    <meta http-equiv="X-UA-Compatible" content="IE=edge;" />
    <link rel="shortcut icon" href="~/favicon.ico" />
    <!-- Bootstrap CSS -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" media="screen"/>
    <!-- Main CSS -->
    <link href="@Url.Content("~/Content/login.css")" rel="stylesheet" media="screen"/>
    <!-- Animate CSS -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/animate.css")"/>
    <!-- Font Awesome CSS -->
    <link href="@Url.Content("~/fonts/font-awesome.css")" rel="stylesheet"/>
    <link rel="stylesheet" media="all" type="text/css" href="@Url.Content("~/Content/jquery-ui.css")" />
    <!--[if IE 7]>
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/fonts/font-awesome.css")" />
    <![endif]-->
    <!-- HTML5 shiv and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
     <script type="text/javascript" src="@Url.Content("~/Scripts/html5shiv.js")"></script>
      <script type="text/javascript" src="@Url.Content("~/Scripts/respond.min.js")"></script>
    <![endif]-->
    <style type="text/css">
        .ui-button-icon-primary.ui-icon.ui-icon-closethick
        {
            margin: -7px 0 0 -7px;
        }
        div.ui-dialog.ui-widget.ui-widget-content.ui-corner-all.alert.ui-draggable, div.ui-dialog.ui-widget.ui-widget-content.ui-corner-all.ui-front.alert.ui-draggable
        {
            top: 130px !important;
        }
        .ui-dialog .ui-dialog-buttonpane .ui-dialog-buttonset
        {
            float: none;
        }
        
        .ui-dialog .ui-dialog-buttonpane
        {
            text-align: center; /* left/center/right */
        }
        .top-buffer
        {
            margin-top: 10px;
        }
        
        .field-validation-error
        {
            color: #e80c4d;
            font-weight: bold;
        }
        
        .field-validation-valid
        {
            display: none;
        }
        
        .validation-summary-errors
        {
            color: #e80c4d;
            font-weight: bold;
            font-size: 1.1em;
        }
        
        .validation-summary-valid
        {
            display: none;
        }
    </style>
</head>
<body class="animated fadeInDown">
    <!-- Main Container start -->
    <div class="container">
        <div class="row">
            <div class="col-md-push-4 col-md-4 col-sm-push-3 col-sm-6 col-sx-12 animated flipInY">
                <!-- Header start -->
                <header> 
        <!-- Logo start --> 
        <a href="#" class="logo"><img src="@Url.Content("~/Images/brand-logo-login.png")"></a> <br />
        <!-- Logo end -->
      </header>
                <!-- Main Container end -->
                <div id="body">
                    @RenderSection("featured", required: false)
                    <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
                </div>
                <footer id="footer">
  <p class="copyright">&copy; 2014. All Rights Reserved.</p>
</footer>
            </div>
        </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-v1.10.3.js")" type="text/javascript"></script>
</body>
</html>
