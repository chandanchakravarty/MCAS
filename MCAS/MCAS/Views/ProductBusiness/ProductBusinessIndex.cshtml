@model IEnumerable<MCAS.Web.Objects.MastersHelper.ProductBusinessModel>
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Globalisation
@{
    //ViewBag.Title = "ProductBusiness";
    ViewBag.Title = ProductBusinessIndex.Title;
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    @Html.Hidden("oldgroup", 1)

    SecurityPermissions myPemissions = (MCAS.Web.Objects.CommonHelper.SecurityPermissions)ViewData["UserPermissions"];
}
@using MCAS.Web.Objects.Resources.ProductBusiness;
@using MCAS.Web.Objects.Resources.Common;
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <!-- Bootstrap Container Start -->
    <div class="container">
        <!-- Page title start -->
        <!-- Page title end -->
        <!-- Row start for sub navigation -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    @Common.SystemAdmin
                </h2>
                <ul class="breadcrumb">
                    <li>@ProductBusinessIndex.MainClassofBusiness </li>
                </ul>
            </div>
        </div>
        <!-- Row End -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sx-12 col-sm-12">
                <div class="panel panel-secondary">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="panel panel-info">
                                <div class="panel-heading clearfix">
                                    <i class="icon-check-sign"></i>
                                    <h3 class="panel-title">
                                        @ProductBusinessIndex.MainClassofBusiness
                                    </h3>
                                </div>
                                <div class="panel-sub-heading">
                                    <span class="text-danger">*</span>@Common.SearchScreen
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("ProductBusinessIndex", "ProductBusiness", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                                    {
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4" for="inputUserId">
                                                        @ProductBusinessIndex.MainClassDescription
                                                    </label>
                                                    <div class="col-sm-6">
                                                        <select name="ddlProduct" id="ddlProduct" class="col-lg-12 form-control">
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>    
                                        <div class="row top-buffer">
                                        </div>
                                        <div class="row top-buffer">
                                        </div>     
                                                                            
                                        <div class="row">
                                            <div class="col-lg-12 text-center">
                                                <button type="submit" class="btn btn-info">
                                                    @Common.Search</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                @if (@myPemissions.Write)
                                                {
                                                    @Html.ActionLink(Common.AddNew, "ProductBusinessEditor", "ProductBusiness",new{}, new { @class = "btn btn-info" })
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h4>
                                    @Common.SearchResults</h4>
                            </div>
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <div class="row-fluid">
                                        <div class="dataTables_wrapper" id="Diary_wrapper" role="grid">
                                            <table id="tableDiarySrc" width="100%" class="table table-striped table-hover display">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 20%; padding-left: 9px">
                                                            @ProductBusinessIndex.MainClassCode
                                                        </th>
                                                        <th style="width: 50%; padding-left: 9px">
                                                            @ProductBusinessIndex.MainClassDescription
                                                        </th>
                                                        <th style="width: 15%; padding-left: 9px">
                                                            @Common.Status
                                                        </th>
                                                        <th style="width: 15%;">
                                                            <span class="block text-right"> @Common.Select</span>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        int trid = 1;
                                                        int rowmatch = 0;
                                                        var display = "";
                                                        var stat = "";
                                                        var strNote = "";
                                                        foreach (var item in Model)
                                                        {
                                                            rowmatch += 1;

                                                            if (item.Status == "1")
                                                            {
                                                                stat = "Active";
                                                            }
                                                            else
                                                            {
                                                                stat = "Inactive";
                                                            }
                                               
                                                        <tr group='@(trid)' style="display:@display;">
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.ProductCode)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.ProductDisplayName)
                                                            </td>
                                                            <td>
                                                                @stat
                                                            </td>
                                                            <td>
                                                                @if (@myPemissions.Write)
                                                                {
                                                                    @Html.EncodedActionLink(Common.Edit, "ProductBusinessEditor", new { ProductId = item.ProductId, pageMode = "Edit" }, new { @class = "btn btn-xs btn-warning" })   
                                                                }
                                                                @if (@myPemissions.Read)
                                                                {
                                                        
                                                                    @Html.EncodedActionLink(Common.View, "ProductBusinessEditor", new { ProductId = item.ProductId, pageMode = "View" }, new { @class = "btn btn-xs btn-info" })
                                                                }
                                                            </td>
                                                        </tr>
                                               
                                                        }}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row End -->
    </div>
    <!-- Bootstrap Container End -->
</div>
<script type="text/javascript">
    $(document).ready(function () {
        loadProducts();

    });

    function loadProducts() {
        $.ajax({
            url: '@(Url.Action("FillProductDescription"))',
            cache: false,
            success: function (data) {
                $("#ddlProduct").empty();
                $.each(data, function (index, optiondata) {
                    if (optiondata.ProductCode == '@ViewBag.classcode')
                        $("#ddlProduct").append("<option value='" + optiondata.ProductCode + "' selected=selected>" + optiondata.ProductDisplayName + "</option>");
                    else
                        $("#ddlProduct").append("<option value='" + optiondata.ProductCode + "'>" + optiondata.ProductDisplayName + "</option>");
                });
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }
</script>
