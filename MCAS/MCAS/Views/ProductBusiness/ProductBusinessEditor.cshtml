@model MCAS.Web.Objects.MastersHelper.ProductBusinessModel
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Globalisation
@{
    //ViewBag.Title = "ProductBusinessEditor";
    var mMCASQueryString = Html.MCASQueryString(Request.QueryString);
    ViewBag.Title = ProductBusinessEditor.Title;
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    var pageMode = mMCASQueryString["pageMode"];
    var btndisplay = "yes";
    if (pageMode == "View")
    {
        btndisplay = "none";
    }
    SecurityPermissions myPemissions = (SecurityPermissions)ViewData["UserPermissions"];
    var ProdCode = Model.ProductCode;
    var dis = TempData["display"] == "" ? null : ProdCode == null ? "none;" : "Block"; 
}
@using MCAS.Web.Objects.Resources.ProductBusiness;
@using MCAS.Web.Objects.Resources.Common;
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <!-- Bootstrap Container Start -->
    <div class="container">
        <!-- Page title start -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    @Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@ProductBusinessEditor.MainClassofBusinessDetails</li>
                </ul>
            </div>
        </div>
        <!-- Page title end -->
        <!-- Row start for sub navigation -->
        <hr />
        <!-- Row End -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            @ProductBusinessEditor.MainClassofBusinessDetails
                        </h3>
                    </div>
                    <div style="color: Red; font-weight: bold;" class="has-error" id="error">
                        <p align="center">
                            @if (TempData["result"] != null)
                            {
                                @TempData["result"]
                            }
                        </p>
                    </div>
                    <div id="t2">
                        <div class="panel-body">
                            @using (Html.BeginForm("ProductBusinessEditor", "ProductBusiness", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "usergroupform" }))
                            {
                                @Html.HiddenFor(m => m.ProductId)
                                @Html.ValidationSummary(true)
                                <div class="row top-buffer">
                                    <div class="clearfix igr col-md-12">
                                        <div class="col-md-3">
                                            <label for="DisplayProductCode">
                                                @ProductBusinessEditor.MainClassCode&nbsp;<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(m => m.ProductCode, new { @maxlength = "3", @class = "col-lg-12 form-control" })<br />
                                            @Html.ValidationMessageFor(m => m.ProductCode)
                                        </div>
                                        <div class="col-md-3">
                                            <label for="inputGropuName">
                                                @ProductBusinessEditor.MainClassDescription&nbsp;<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(m => m.ProductDisplayName, new { id = "MainClassDesc", @maxlength = "50", @class = "col-lg-12 form-control" })<br />
                                            @Html.ValidationMessageFor(m => m.ProductDisplayName)
                                        </div>
                                    </div>
                                </div>
                            
                                <div class="row top-buffer">
                                    <div class="clearfix igr col-md-12">
                                        <div class="col-md-3">
                                            <label for="inputIsActive">
                                                @Common.Status &nbsp;<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.DropDownListFor(m => m.Status, new SelectList(Model.Statuslist, "Lookup_value", "Lookup_desc", "Active"), new { id = "ddlStatus", @class = "col-lg-12 form-control" })<br />
                                            @Html.ValidationMessageFor(m => m.Status)
                                        </div>
                                    </div>
                                </div>
                            
                            
                            
                            
                                <div class="row top-buffer">
                                </div>
                                <div class="row top-buffer">
                                </div>
                            
                                <div class="row top-buffer">
                                    <div class="clearfix igr col-md-12 text-center">
                                        @if (@myPemissions.Write)
                                        {
                                            <button id="btnSave" style="display:@btndisplay" class="btn btn-info">
                                                @Common.Save</button>
                                        }&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        @Html.ActionLink(Common.Back, "ProductBusinessIndex", null, new { @class = "btn btn-info" })
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row End -->
        <div class="panel">
            @Html.Partial("~/Views/Shared/_TimeStamp.cshtml", Model)
        </div>
    </div>
    <!-- Bootstrap Container End -->
</div>
<script type="text/javascript">
    var do_on_load = function () {
        $(document).on("focus", ":input", function () {
            $(this).attr("autocomplete", "off")
        });
        $("#ProductCode").blur(function (event) {
            var pro = $.trim($("#ProductCode").val());
            //            if (pro != "" && pro.length < 3) {
            //                alert("Main class code should be minimum 3 characters .", "DisplayProductCode");
            //                event.preventDefault();
            //                return !0;
            //            };

            if (pro != "") {
                var prodExist = ("@Model.ProductCode" != null || "@Model.ProductCode" != "") ? "@Model.ProductCode" : "";
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("CheckProdCode", "ProductBusiness")',
                    data: {
                        ProductDescription: pro,
                        prod: prodExist
                    },
                    success: function (a) {
                        if (a == true && (getQueryVariable("pageMode") != "Edit")) {
                            //alert("Duplicate Main Class Code.");
                            alert("@Html.Raw(ProductBusinessEditor.MsgDuplicateMainClassCode)");
                            $("#btnSave").attr("disabled", "disabled");
                        }
                        else if (($("#ProductCode").val() != '@Model.ProductCode') && a == true) {
                            alert("@Html.Raw(ProductBusinessEditor.MsgDuplicateMainClassCode)");
                            $("#btnSave").attr("disabled", "disabled");
                        }
                        else {
                            $("#btnSave").removeAttr("disabled");
                        }

                    }

                });
            };


        });
        '@pageMode' == 'View' && $('#t2').find('input, textarea, button, select').attr('disabled', 'disabled');
    };
    $(document).ready(do_on_load);
    $(window).bind('page:change', do_on_load);

    function getQueryVariable(a) {
        for (var e = "@MenuListItem.ClaimTabs.GetQueryStringVal()".replace(/amp;/ig, "").split("&"), d = 0; d < e.length; d++) {
            var b = e[d].split("=");
            if (b[0] == a) return b[1]
        }
    };

     
</script>
