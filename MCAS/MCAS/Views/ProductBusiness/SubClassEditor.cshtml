@model MCAS.Web.Objects.MastersHelper.SubClassModel
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Web.Objects.Resources.ProductBusiness;
@using MCAS.Web.Objects.Resources.Common;
@using MCAS.Globalisation
@{
    //ViewBag.Title = "SubClassEditor";
    ViewBag.Title = SubClassEditor.Title;
    var mMCASQueryString = Html.MCASQueryString(Request.QueryString);
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    var ProductCode = Model.ProductCode == null ? "" : Model.ProductCode;
    var BusinessType = Model.BusinessType == null ? "" : Model.BusinessType;


    var pageMode = mMCASQueryString["pageMode"];
    var btndisplay = pageMode == "View" ? "none" : "yes";
    var cobcode = Model.CobCode;
    SecurityPermissions myPemissions = (SecurityPermissions)ViewData["UserPermissions"];
}
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <!-- Bootstrap Container Start -->
    <div class="container">
        <!-- Page title start -->
        <!-- Page title end -->
        <!-- Row start for sub navigation -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    @Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@SubClassEditor.SubClassDetails</li>
                </ul>
            </div>
        </div>
        <!-- Row End -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            @SubClassEditor.SubClassDetails</h3>
                    </div>
                    <div style="color: Red; font-weight: bold;" class="has-error" id="error">
                        <p align="center">
                            @if (TempData["notice"] != null)
                            {
                                @TempData["notice"]
                            }
                        </p>
                    </div>
                    <div id="t2">
                        <div class="panel-body">
                            @using (Html.BeginForm("SubClassEditor", "ProductBusiness", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "usergroupform" }))
                            {
                                @Html.HiddenFor(m => m.ID)
                                @Html.ValidationSummary(true)                          
                                <div class="row top-buffer">
                                    <div class="clearfix igr col-md-12">
                                        <div class="col-md-2">
                                            <label for="inputMainClass">
                                                @SubClassEditor.MainClass&nbsp;<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.DropDownListFor(m => m.ProductCode, new SelectList(Model.MainClassList, "ProductCode", "ProductDisplayName", "-1"), new { id = "ddlMainClass", @class = "col-lg-12 form-control" })<br />
                                            @Html.ValidationMessageFor(m => m.ProductCode)
                                        </div>
                                        <div class="col-md-2">
                                            <label for="inputGropuName">
                                                @SubClassEditor.TypeofBusiness
                                            </label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.DropDownListFor(m => m.BusinessType, new SelectList(Model.BusinessTypelist, "Lookup_value", "Lookup_desc", "-1"), new { @class = "col-lg-12 form-control" })<br />
                                        </div>
                                    </div>
                                </div>
                            
                            
                                <div class="row top-buffer">
                                    <div class="clearfix igr col-md-12">
                                        <div class="col-md-2">
                                            <label for="inputGropuName">
                                                @SubClassEditor.SubClassCode &nbsp;<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(m => m.CobCode, new { id = "SubClassCode", @maxlength = 4, @class = "col-lg-12 form-control" })<br />
                                            @Html.ValidationMessageFor(m => m.CobCode)
                                        </div>
                                        <div class="col-md-2">
                                            <label for="inputIsActive">
                                                @Common.Status</label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.DropDownListFor(m => m.Status, new SelectList(Model.Statuslist, "Lookup_value", "Lookup_desc", "Active"), new { @class = "col-lg-12 form-control" })<br />
                                        </div>
                                    </div>
                                </div>
                                <div class="row top-buffer">
                                    <div class="clearfix igr col-md-12">
                                        <div class="col-md-2">
                                            <label for="inputDepartment">
                                                @SubClassEditor.SubClassDescription&nbsp;<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(m => m.CobDesc, new { @maxlength = 100, @class = "col-lg-12 form-control" })<br />
                                            @Html.ValidationMessageFor(m => m.CobDesc)
                                        </div>
                                        <div class="col-md-2">
                                            <label for="inputGropuName">
                                                @Common.Remarks
                                            </label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(m => m.Remarks, new { @maxlength = 300, @class = "col-lg-12 form-control" })<br />
                                        </div>
                                    </div>
                                </div>
                            
                            
                            
                                <div class="row top-buffer">
                                </div>
                                <div class="row top-buffer">
                                </div>
                            
                            
                            
                            
                            
                                <div class="row top-buffer">
                                    <div class="clearfix igr col-md-12 text-center">
                                        @if (@myPemissions.Write)
                                        {
                                            <button id="btnSave" style="display:@btndisplay" class="btn btn-info">
                                                @Common.Save</button>
                                        }
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        @Html.ActionLink(Common.Back, "SubClassIndex", null, new { @class = "btn btn-info" })&nbsp;&nbsp;&nbsp;&nbsp;
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row End -->
        <div class="panel">
            @Html.Partial("~/Views/Shared/_TimeStamp.cshtml", Model)
        </div>
    </div>
    <!-- Bootstrap Container End -->
</div>
<script type="text/javascript">
    $("#ddlMainClass option[value='" + '@ProductCode' + "']").attr('selected', true);
    $("#BusinessType option[value='" + '@BusinessType' + "']").attr('selected', true);

    var do_on_load = function () {
        $(document).on("focus", ":input", function () {
            $(this).attr("autocomplete", "off")
        });
        $("#SubClassCode").blur(function (event) {
            var SubCode = $.trim($("#SubClassCode").val());
            if (SubCode != "" && SubCode.length < 4) {
                //alert("Sub class code should be minimum 4 characters.", "SubClassCode");
                alert("@Html.Raw(SubClassEditor.MaxLengthSubclasscode)", "SubClassCode");
                event.preventDefault();
                return !0;
            };
            var prodExist = ("@Model.CobCode" != null || "@Model.CobCode" != "") ? "@Model.CobCode" : "";
            $.ajax({
                type: "POST",
                url: '@Url.Action("CheckSubClassCode", "ProductBusiness")',
                data: {
                    SubClassCode: SubCode,
                    SubClas: '@Model.CobCode'
                },
                success: function (a) {
                    if (a == true && (getQueryVariable("pageMode") != "Edit")) {
                        alert("@Html.Raw(SubClassEditor.DuplicateSubClassCode)");
                        $("#btnSave").attr("disabled", "disabled");
                    }
                    else if (($("#SubClassCode").val() != '@Model.CobCode') && a == true) {
                        alert("@Html.Raw(SubClassEditor.DuplicateSubClassCode)");
                        $("#btnSave").attr("disabled", "disabled");
                    }
                    else {
                        $("#btnSave").removeAttr("disabled");
                    }

                }
            });
        });
        '@pageMode' == 'View' && $('#t2').find('input, textarea, button, select').attr('disabled', 'disabled');
    };
    $(document).ready(do_on_load);
    $(window).bind('page:change', do_on_load);

    function getQueryVariable(a) {
        for (var e = "@MenuListItem.ClaimTabs.GetQueryStringVal()".replace(/amp;/ig, "").split("&"), d = 0; d < e.length; d++) {
            var b = e[d].split("=");
            if (b[0] == a) return b[1]
        }
    };
        

</script>
