@model MCAS.Web.Objects.MastersHelper.AdjusterModel
@{
    ViewBag.Title = "AdjusterMaster";
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
}


<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>

<div class="dashboard-wrapper">
    <!-- Bootstrap Container Start -->
    <div class="container">
    
        <!-- Page title start -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    System Admin</h2>
                <ul class="breadcrumb">
                    <li>Adjuster Master Details</li>
                </ul>
            </div>
        </div>
        <!-- Page title end -->
        <!-- Row start for sub navigation -->
        <hr />
        <!-- Row End -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            Adjuster Master Details</h3>
                    </div>
                    <div style="color:Red; font-weight:bold;"; class="has-error" id="error">
<p align="center">
@if (TempData["notice"] != null) {
  @TempData["notice"]
}
</p>
</div>
                    <div class="panel-body">
                        @using (Html.BeginForm("AdjusterMaster", "AdjusterMasters", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "usergroupform" }))
                        {
                           @* @Html.ValidationSummary(true)*@
                            <div class="row">
                                
                                 @Html.HiddenFor(m => m.AdjusterId)
                                    <div class="clearfix igr col-md-12"> 
                                    <div class="col-md-2">
                                        <label for="inputMainClass">
                                            Adjuster Type&nbsp;<span class="text-danger">*</span></label>
                                            </div>
                                        <div class="col-md-3">
                                       @Html.DropDownListFor(m => m.AdjSrc, new SelectList(Model.SolicitorTypelist, "Lookup_value", "Lookup_desc"), new { @class = "col-lg-12 form-control" })<br />
                                        </div>
                                    </div>
                                
                                </div>
                           <div class="row">
                                <div class="col-lg-6">
                                 <div class="form-group">
                                 <div class="col-md-2">
                                        <label  for="inputMainClass">
                                            Adjuster source&nbsp;<span class="text-danger">*</span></label>
                                            </div>
                                        <div class="col-sm-9">
                                       @Html.DropDownListFor(m => m.AdjSrc, new SelectList(Model.SolicitorTypelist, "Lookup_value", "Lookup_desc"), new { @class = "col-lg-12 form-control" })<br />
                                        </div>
                                    </div>
                                </div>
                                </div>
                             <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        
                                        <label for="inputGroupCode">
                                            Company Name &nbsp;<span class="text-danger">*</span></label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.AdjusterName, new { @maxlength = "25", @class = "col-lg-12 form-control" })<br />
                                        @Html.ValidationMessageFor(m => m.AdjusterName)<br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputGropuName">
                                            Address1</label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.Address1, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputGropuName">
                                            Address2</label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.Address2, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputGropuName">
                                            Address3</label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.Address3, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputDepartment">
                                            City</label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.CityCode, new SelectList(Model.citylist, "CityCode", "CityName"), new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputAccessLevel">
                                            Country</label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.CountryCode, new SelectList(Model.countrylist, "CountryCode", "CountryName"), new { @class = "col-lg-12 form-control" })
                                        <br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputIsActive">
                                            Telephone No (off)</label>
                                    </div>
                                    <div class="col-md-3">
                                         @Html.TextBoxFor(m => m.TelNoOff, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputIsActive">
                                            Telephone No (Res)</label>
                                    </div>
                                    <div class="col-md-3">
                                         @Html.TextBoxFor(m => m.TelNoRes, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputGropuName">
                                            Mobile </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.MobileNo, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputAccessLevel">
                                            Province</label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.Province, new SelectList(Model.ProvinceList, "ProvinceCode", "ProvinceName"), new { @class = "col-lg-12 form-control" })
                                        <br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputAccessLevel">
                                            Vat(%)</label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.GST, new SelectList(Model.GSTList, "Rate", "GSTDesc"), new { id = "ddlGst", @onchange = "$('#txtVatPer').val(this.value);", @class = "col-lg-12 form-control" })
                                        <br />
                                        <br />
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.VATPer, new { id = "txtVatPer", @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputGropuName">
                                            Email </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.EMail, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputGropuName">
                                            Contact Person </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.ConPer, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputGropuName">
                                            Fax </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.FaxNo, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputGropuName">
                                            Postal Code </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.PostCode, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputGropuName">
                                            Private Email </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.PvEmail, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-2">
                                        <label for="inputGropuName">
                                            Vat Reg No </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.VATNo, new { @class = "col-lg-12 form-control" })<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="clearfix igr col-md-12 text-center">
                                    @Html.ActionLink("Back", "AdjusterIndex", null, new { @class = "btn btn-info" })&nbsp;&nbsp;&nbsp;&nbsp;
                                    <button class="btn btn-info">
                                        Save</button>&nbsp;&nbsp;&nbsp;&nbsp;
                                    @Html.ActionLink("Cancel", "AdjusterIndex", null, new { @class = "btn btn-info" })
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Row End -->
    </div>
    <!-- Bootstrap Container End -->
</div>

<script type="text/javascript">
    $(function () {
        $("#ddlGst").change(function () {
            var end = this.value;
            $('#txtVatPer').val(end);
        });
    });
</script>
