@model MCAS.Web.Objects.MastersHelper.LossNatureListItems
@using MCAS.Web.Objects.CommonHelper
@{
    ViewBag.Title = "LossNatureMasterEditor";
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    var pageMode = Request.QueryString["pageMode"];
    var btndisplay = "yes";
    if (pageMode == "View")
    {
        btndisplay = "none";
    }

    SecurityPermissions myPemissions = (SecurityPermissions)ViewData["UserPermissions"];

}

<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>

<div class="dashboard-wrapper">
    <!-- Bootstrap Container Start -->
    <div class="container">
        <!-- Page title start -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    System Admin</h2>
                <ul class="breadcrumb">
                 
                    <li>Nature of Loss Details</li>
                </ul>
            </div>
        </div>
        <!-- Page title end -->
        <!-- Row start for sub navigation -->
        <hr />
        <!-- Row End -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            Nature of Loss Details</h3>
                    </div>
                    <div style="color:Red; font-weight:bold;" class="has-error" id="error">
<p align="center">
@if (TempData["result"] != null)
{
  @TempData["result"]
}
</p>
</div>
                    
                    <div class="panel-body">
                    @using (Html.BeginForm("LossNatureMasterEditor", "ClaimMasters", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "lossnatureform", name = "lossnatureform" }))
                    {
                        @Html.ValidationSummary(true)
                        <div class="row top-buffer">
                            <div class="clearfix igr col-md-12">
                                    <div class="col-md-3">
                                       
                                        <label for="inputLossNatureCode">
                                            Loss Nature Code </label>
                                    </div>
                                    <div class="col-md-3">
                                       <b>@Html.DisplayFor(m => m.LossNatureCode, new { id = "inputLossNatureCode", @class = "col-lg-12 form-control" })</b>
                                       @Html.HiddenFor(m => m.LossNatureCode)
                                    </div>
                                    
                            </div>
                                
                            </div>
                        
                        <div class="row top-buffer">
                                <div class="clearfix igr col-md-12">
                                @Html.HiddenFor(m => m.TranId)
                                    <div class="col-md-3">
                                        <label for="inputMainClass">
                                            Main Class Description&nbsp;<span class="text-danger">*</span></label>
                                            </div>
                                        <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.ProductCode, new SelectList(Model.ProductList, "ProductCode", "ProductDisplayName"), new { @class = "col-lg-12 form-control" })
                                        @Html.ValidationMessageFor(m => m.ProductCode)
                                        </div>
                                    
                                </div>
                         </div>
                        
                        <div class="row top-buffer">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-3">
                                        <label for="inputGroupCode">
                                             Sub Class Description  &nbsp;<span class="text-danger">*</span></label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.SubClassCode, new SelectList(Model.SubClassList, "ClassCode", "ClassDescrption"), new { @class = "col-lg-12 form-control" })
                                            @Html.ValidationMessageFor(m => m.SubClassCode)
                                    </div>
                                </div>
                            </div>
                        
                        
                        <div class="row top-buffer">
                            <div class="clearfix igr col-md-12">
                                    <div class="col-md-3">
                                        <label for="inputLossType">
                                            Loss Nature </label>
                                            </div>
                                        <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.LossType, new SelectList(Model.LossTypeList, "LossTypeCode", "LossTypeName"), new { @class = "col-lg-12 form-control" })
                                        @Html.ValidationMessageFor(m => m.LossType)
                                        </div>
                                    
                                </div>
                        </div>
                        
                        <div class="row top-buffer">
                            <div class="clearfix igr col-md-12">
                                    <div class="col-md-3">
                                        <label for="inputNatureDesc">
                                          Loss Nature Description &nbsp;<span class="text-danger">*</span></label>
                                            </div>
                                        <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.LossNatureDescription, new {@maxlength = "70", id = "LossNatureDescription", @class = "col-lg-12 form-control" })
                                        @Html.ValidationMessageFor(m => m.LossNatureDescription)
                                       
                                        </div>
                                    
                                </div>
                        </div>
                        <div class="row top-buffer">
                            <div class="clearfix igr col-md-12 text-center">
                              @if (@Model.UserPermissions.Write)
                             {
                                <button  style="display:@btndisplay" id="btnsave" class="btn btn-info" visibility = @Model.UserPermissions.Write >Save</button>
                             }
                            &nbsp;&nbsp;&nbsp;&nbsp;
                                @Html.ActionLink("Back", "LossNatureMasterList", null, new { @class = "btn btn-info" })&nbsp;&nbsp;&nbsp;&nbsp;
                                
                               
                            </div>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>
        <!-- Row End -->
    </div>
    <!-- Bootstrap Container End -->
</div>

<script type="text/javascript">
    

    function onclickcancel() {
        $('#lossnatureform')[0].reset();
    }
</script>

