<script type="text/javascript">
    $(function () {
        $(document).on("focus", ":input", function () {
            $(this).attr("autocomplete", "off")
        });
        $("#txtCurrencyCode").blur(function (event) {
            var CurrCode = $.trim($("#txtCurrencyCode").val());
            $.ajax({
                type: "POST",
                url: '@Url.Action("CheckCurrCode", "ClaimMasters")',
                data: {
                    CurrencyCode: CurrCode, curr: '@Model.CurrencyCode'
                },
                success: function (a) {
                    if (a == true && (getQueryVariable("pageMode") != "Edit")) {
                        //alert("Duplicate Currency Code.");
                        alert("@Html.Raw(CurrencyMasterEditor.DuplicateCurrencyCode)");
                        $("#divSave").attr("disabled", "disabled");
                    }
                    else if (($("#txtCurrencyCode").val() != '@Model.CurrencyCode') && a == true) {
                        alert("@Html.Raw(CurrencyMasterEditor.DuplicateCurrencyCode)");
                        $("#divSave").attr("disabled", "disabled");
                    }
                    else {
                        $("#divSave").removeAttr("disabled");
                    }

                }
            });
        });
        function getQueryVariable(a) {
            for (var e = "@MenuListItem.ClaimTabs.GetQueryStringVal()".replace(/amp;/ig, "").split("&"), d = 0; d < e.length; d++) {
                var b = e[d].split("=");
                if (b[0] == a) return b[1]
            }
        };

    });

    if ('@pageMode' == 'View') {
        $('#userdeptsform').find('input, textarea, button, select').attr('disabled', 'disabled');
    }
</script>
