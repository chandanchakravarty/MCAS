@model MCAS.Web.Objects.MastersHelper.CurrencyMasterModel
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Web.Objects.Resources.ClaimMasters;
@using MCAS.Web.Objects.Resources.Common
@using MCAS.Globalisation
@{
    //ViewBag.Title = "CurrencyMasterEditor";
    ViewBag.Title = CurrencyMasterEditor.Title;
    var mMCASQueryString = Html.MCASQueryString(Request.QueryString);
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    var pageMode = mMCASQueryString["pageMode"];
    var btndisplay = "yes";
    if (pageMode == "View")
    {
        btndisplay = "none";
    }

    SecurityPermissions myPemissions = (SecurityPermissions)ViewData["UserPermissions"];
}
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <div class="container">
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    @Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@CurrencyMasterEditor.CurrencyMasterDetails</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            @CurrencyMasterEditor.CurrencyMasterDetails</h3>
                    </div>
                    <div style="color: Red; font-weight: bold;" class="has-error" id="error">
                        <p align="center">
                            @if (TempData["notice"] != null)
                            {
                                @TempData["notice"]
                            }
                        </p>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("CurrencyMasterEditor", "ClaimMasters", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "userdeptsform", name = "userdeptsform" }))
                        {
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => m.TranId)
                            <div class="row top-buffer">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-3">
                                        <label for="inputGropuName">
                                            @CurrencyMasterEditor.CurrencyCode&nbsp;<span class="text-danger">*</span></label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.CurrencyCode, new { id = "txtCurrencyCode", @maxlength = 4, @class = "col-lg-12 form-control" })<br />
                                        @Html.ValidationMessageFor(m => m.CurrencyCode)
                                    </div>
                                    <div class="col-md-3">
                                        <label for="inputGropuName">
                                            @CurrencyMasterEditor.CurrencyDisplayCode&nbsp;<span class="text-danger">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.CurrencyDispCode, new { @maxlength = 8, @class = "col-lg-12 form-control" })<br />
                                        @Html.ValidationMessageFor(m => m.CurrencyDispCode)
                                    </div>
                                </div>
                            </div>
                                                  
                            <div class="row top-buffer">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-3">
                                        <label for="inputGropuName">
                                            @CurrencyMasterEditor.CurrencyDescription&nbsp;<span class="text-danger">*</span></label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.Description, new { @maxlength = 25, @class = "col-lg-12 form-control" })<br />
                                        @Html.ValidationMessageFor(m => m.Description)<br />
                                        <br />
                                    </div>
                                </div>
                            </div>
                         
                            <div class="row top-buffer">
                            </div>
                            <div class="row top-buffer">
                            </div>  
                        
                            <div class="row top-buffer ">
                                <div class="clearfix igr col-md-12 text-center">
                                    @if (@myPemissions.Write)
                                    {
                                        <button id="btnSave" style="display:@btndisplay" class="btn btn-info">
                                            @Common.Save</button>
                                    }
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    @Html.ActionLink(Common.Back, "CurrencyMasterIndex", null, new { @class = "btn btn-info" })&nbsp;&nbsp;&nbsp;
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="panel">
            @Html.Partial("~/Views/Shared/_TimeStamp.cshtml", Model)
        </div>
    </div>
</div>
