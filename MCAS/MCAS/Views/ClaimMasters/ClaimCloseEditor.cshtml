@model MCAS.Web.Objects.MastersHelper.ClaimCloseModel
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Web.Objects.Resources.ClaimMasters;
@using MCAS.Web.Objects.Resources.Common
@using MCAS.Globalisation
@{
    //ViewBag.Title = "ClaimCloseEditor";
    ViewBag.Title = ClaimCloseEditor.Title;
    var mMCASQueryString = Html.MCASQueryString(Request.QueryString);
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    var pageMode = mMCASQueryString["pageMode"];
    var btndisplay = "yes";
    if (pageMode == "View")
    {
        btndisplay = "none";
    }
    var dis1 = Model.Id == null ? "none;" : "inline;";
    var cedantid1 = Model.Id == null ? "" : Convert.ToString(Model.Id);
    SecurityPermissions myPemissions = (SecurityPermissions)ViewData["UserPermissions"];
}
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <div class="container">
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    @Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@ClaimCloseEditor.ClaimsCloseReasonMasterDetails</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            @ClaimCloseEditor.ClaimsCloseReasonMasterDetails</h3>
                    </div>
                    <div style="color: Red; font-weight: bold;" class="has-error" id="error">
                        <p align="center">
                            @if (TempData["notice"] != null)
                            {
                                @TempData["notice"]
                            }
                        </p>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("ClaimCloseEditor", "ClaimMasters", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "userdeptsform", name = "userdeptsform" }))
                        {
                            @Html.HiddenFor(x => x.Id);
                            @Html.ValidationSummary(true)
                            <div id="t2">
                                <div class="row top-buffer">
                                    <div style="display:@dis1" class="clearfix igr col-md-12">
                                        <div class="col-md-3">
                                            <label for="inputClaimCloseCode">
                                                @ClaimCloseEditor.ClaimsCloseReasonCode
                                            </label>
                                        </div>
                                        <div class="col-md-3">
                                            <b>@Html.DisplayFor(m => m.CloseCode, new { id = "inputClaimCloseCode", @class = "col-lg-12 form-control" })</b>
                                            @Html.HiddenFor(m => m.CloseCode)
                                        </div>
                                    </div>
                                </div>
                                <div class="row top-buffer">
                                    @Html.HiddenFor(m => m.CloseCode)
                                    <div class="clearfix igr col-md-12">
                                        <div class="col-md-3">
                                            <label for="inputVehicleMakeCode">
                                                @ClaimCloseEditor.ClaimsCloseReasonDescription&nbsp;<span class="text-danger">*</span>
                                            </label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.TextAreaFor(m => m.CloseDescrpition, new { @maxlength = "450", id = "ClaimClose", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.CloseDescrpition)
                                        </div>
                                    </div>
                                </div>
                                <div class="row top-buffer">
                                    <div class="clearfix igr col-md-12 text-center">
                                        @if (@myPemissions.Write)
                                        {
                                            <button style="display:@btndisplay" id="btnSave" class="btn btn-info">
                                                @Common.Save</button>
                                        }
                                        &nbsp;&nbsp;&nbsp;&nbsp;
                                        @Html.ActionLink(Common.Back, "ClaimCloseIndex", null, new { @class = "btn btn-info" })&nbsp;&nbsp;&nbsp;&nbsp;
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="panel">
            @Html.Partial("~/Views/Shared/_TimeStamp.cshtml", Model)
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $(document).on("focus", ":input", function () {
            $(this).attr("autocomplete", "off")
        });
        function getQueryVariable(a) {
            for (var e = "@MenuListItem.ClaimTabs.GetQueryStringVal()".replace(/amp;/ig, "").split("&"), d = 0; d < e.length; d++) {
                var b = e[d].split("=");
                if (b[0] == a) return b[1]
            }
        };
        if ('@pageMode' == 'View') {
            $('#t2').find('input, textarea, button, select').attr('disabled', 'disabled');

        }
    });
</script>
