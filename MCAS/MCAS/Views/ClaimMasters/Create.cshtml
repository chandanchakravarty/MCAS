@model MCAS.Web.Objects.MastersHelper.LossTypeModel
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Globalisation
@{
    //ViewBag.Title = "Create";
    ViewBag.Title = Create.Title;
    var mMCASQueryString = Html.MCASQueryString(Request.QueryString);
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    var pageMode = mMCASQueryString["pageMode"];
    var btndisplay = "yes";
    if (pageMode == "View")
    {
        btndisplay = "none";
    }
    var dis1 = Model.TranId == null ? "none;" : "inline;";
    SecurityPermissions myPemissions = (SecurityPermissions)ViewData["UserPermissions"];
}
@using MCAS.Web.Objects.Resources.ClaimMasters;
@using MCAS.Web.Objects.Resources.Common;
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <div class="container">
        <!-- Page title start -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    @Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@Create.TypeofLossDetails</li>
                </ul>
            </div>
        </div>
        <!-- Page title end -->
        <!-- Row start for sub navigation -->
        <hr />
        <!-- Row End -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            @Create.TypeofLossDetails</h3>
                    </div>
                    <div style="color: Red; font-weight: bold;" class="has-error" id="error">
                        <p align="center">
                            @if (TempData["result"] != null)
                            {
                                @TempData["result"]
                            }
                        </p>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Create", "ClaimMasters", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "losstypeform", name = "losstypeform" }))
                        {
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => m.TranId)
                            <div class="row top-buffer">
                                <div class="clearfix igr col-md-12">
                                    <div style="" class="col-md-3">
                                        <label for="inputLossTypeCode">
                                            @Create.LossTypeCode
                                        </label>
                                    </div>
                                    <div class="col-md-3">
                                        @*<b>@Html.DisplayFor(m => m.LossTypeCode, new { id = "inputLossTypeCode", @class =
                                            "col-lg-12 form-control" })</b>*@
                                        @Html.TextBoxFor(m => m.LossTypeCode, new { id = "inputLossTypeCode", @class = "col-lg-12 form-control", @readonly = "readonly" })
                                        @Html.HiddenFor(m => m.LossTypeCode)
                                    </div>
                                    <div class="col-md-3">
                                        <label for="inputMainClass">
                                            @Create.MainClassDescription&nbsp;<span class="text-danger">*</span></label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.ProductCode, new SelectList(Model.ProductList, "ProductCode", "ProductDisplayName", ""), new { @class = "col-lg-12 form-control" })
                                        @Html.ValidationMessageFor(m => m.ProductCode)
                                    </div>
                                </div>
                            </div>
                                                        
                            <div class="row top-buffer">
                                <div class="clearfix igr col-md-12">
                                    <div class="col-md-3">
                                        <label for="inputGroupCode">
                                            @Create.SubClassDescription &nbsp;<span class="text-danger">*</span></label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.SubClassCode, new SelectList(Model.SubClassList, "ClassCode", "ClassDescrption", ""), new { @class = "col-lg-12 form-control" })
                                        @Html.ValidationMessageFor(m => m.SubClassCode)
                                    </div>
                                    <div class="col-md-3">
                                        <label for="inputLossTypeName">
                                            @Create.LossTypeDescription &nbsp;<span class="text-danger">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.LossTypeName, new { id = "LossTypeName", @maxlength = 30, @class = "col-lg-12 form-control" })
                                        @Html.ValidationMessageFor(m => m.LossTypeName)
                                    </div>
                                </div>
                            </div>
                            
                            
                            <br />
                            
                            <div class="row top-buffer">
                                <div class="clearfix igr col-md-12 text-center">
                                    @if (@myPemissions.Write)
                                    {
                                        <button id="btnSave" style="display:@btndisplay" class="btn btn-info">
                                            @Common.Save</button>
                                    }
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    @Html.ActionLink(Common.Back, "Index", null, new { @class = "btn btn-info" })&nbsp;&nbsp;&nbsp;&nbsp;
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Row End -->
        <div class="panel">
            @Html.Partial("~/Views/Shared/_TimeStamp.cshtml", Model)
        </div>
    </div>
    <!-- Bootstrap Container End -->
</div>
<script type="text/javascript">
    //    function onclickcancel() {
    //        $('#losstypeform')[0].reset();
    //    }
    var do_on_load = function () {
        $(document).on("focus", ":input", function () {
            $(this).attr("autocomplete", "off")
        });


        if ('@pageMode' == 'View') {
            $('#losstypeform').find('input, textarea, button, select').attr('disabled', 'disabled');
        }
    };

    var productCode = "";
    $('#ProductCode option:selected').each(function () {
        if ($(this).attr("selected", "selected")) {
            productCode = "1";
            return false;
        }
    });
    if (productCode != "1") {
        $("#ProductCode option[value='']").attr('selected', true);

    }
    var subClassCode = "";
    $('#SubClassCode option:selected').each(function () {
        if ($(this).attr("selected", "selected")) {
            subClassCode = "1";
            return false;
        }
    });
    if (subClassCode != "1") {
        $("#SubClassCode option[value='']").attr('selected', true);

    }



    $(document).ready(do_on_load);
    $(window).bind('page:change', do_on_load);
</script>
