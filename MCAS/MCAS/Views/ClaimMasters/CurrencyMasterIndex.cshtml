@model IEnumerable<MCAS.Web.Objects.MastersHelper.CurrencyMasterModel>
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Web.Objects.Resources.ClaimMasters;
@using MCAS.Web.Objects.Resources.Common
@using MCAS.Globalisation
@{
    //ViewBag.Title = "CurrencyMasterIndex";
    ViewBag.Title = CurrencyMasterIndex.Title;
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    @Html.Hidden("oldgroup", 1)
    SecurityPermissions myPemissions = (MCAS.Web.Objects.CommonHelper.SecurityPermissions)ViewData["UserPermissions"];
}
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.autocomplete.js")" type="text/javascript"></script>
<div class="dashboard-wrapper">
    <!-- Bootstrap Container Start -->
    <div class="container">
        <!-- Page title start -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    @Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@CurrencyMasterIndex.CurrencyMaster</li>
                </ul>
            </div>
        </div>
        <!-- Page title end -->
        <hr>
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            @CurrencyMasterIndex.CurrencyMaster</h3>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="panel panel-info">
                                <div class="panel-sub-heading">
                                    <span class="text-danger">*</span><strong>@Common.SearchScreen</strong>
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("CurrencyMasterIndex", "ClaimMasters", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                                    {
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4" for="inputCurrencyCode">
                                                        @CurrencyMasterIndex.CurrencyCode</label>
                                                    <div class="col-sm-6">
                                                        <input type="text" placeholder="" value="@ViewBag.currcode" name="inputCurrencyCode" id="inputCurrencyCode" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4 " for="inputCurrencyDisplayCode">
                                                        @CurrencyMasterIndex.CurrencyDisplayCode</label>
                                                    <div class="col-sm-6">
                                                        <input type="text" placeholder="" value="@ViewBag.currdispcode" name="inputCurrencyDisplayCode" id="inputCurrencyDisplayCode" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4" for="inputCurrencyDescription">
                                                        @CurrencyMasterIndex.CurrencyDescription
                                                    </label>
                                                    <div class="col-sm-6">
                                                        <input type="text" placeholder="" value="@ViewBag.currdesc" name="inputCurrencyDescription" id="inputCurrencyDescription" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                            
                                        <div class="row top-buffer">
                                        </div>
                                        <div class="row top-buffer">
                                        </div> 
                                        <div class="row top-buffer">
                                            <div class="col-lg-12 text-center">
                                                @*<button type="submit" class="btn btn-primary">
                                        Back</button>*@
                                                <button type="submit" class="btn btn-info">
                                                    @Common.Search</button>
                                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                @if (@myPemissions.Write)
                                                {
                                                    @Html.ActionLink(Common.AddNew, "CurrencyMasterEditor", "ClaimMasters",new{}, new { @class = "btn btn-info" })
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Row End -->
                    <!-- Row Start -->
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h4 class="text-info">
                                    @Common.SearchResults</h4>
                                <hr>
                            </div>
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <div class="row-fluid">
                                        <div class="dataTables_wrapper" id="Diary_wrapper" role="grid">
                                            <table id="tableDiarySrc" width="100%" cellspacing="0" class="table table-striped table-hover display">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 25%; padding-left: 9px">
                                                            @CurrencyMasterIndex.CurrencyCode
                                                        </th>
                                                        <th style="width: 25%; padding-left: 9px">
                                                            @CurrencyMasterIndex.CurrencyDisplayCode
                                                        </th>
                                                        <th style="width: 25%; padding-left: 9px">
                                                            @CurrencyMasterIndex.CurrencyDescription
                                                        </th>
                                                        <th style="width: 25%">
                                                            <span class="block text-right">@Common.Select</span>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        int trid = 1;
                                                        int rowmatch = 0;
                                                        var display = "";
                                                        var usrstatus = "";

                                                        foreach (var item in Model)
                                                        {
                                                            rowmatch += 1;
                                                                        
                                                        <tr group='@(trid)' style="display:@display;">
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.CurrencyCode)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.CurrencyDispCode)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Description)
                                                            </td>
                                                            <td>
                                                                @if (@myPemissions.Write)
                                                                {
                                                                    @Html.EncodedActionLink(Common.Edit, "CurrencyMasterEditor", new { TranId = item.TranId, pageMode = "Edit" }, new { @class = "btn btn-xs btn-warning" }) 
                                                                }
                                                                @if (@myPemissions.Write)
                                                                {
                                                                    @Html.EncodedActionLink(Common.View, "CurrencyMasterEditor", new { TranId = item.TranId, pageMode = "View" }, new { @class = "btn btn-xs btn-info" })   
                                                                }
                                                            </td>
                                                        </tr>
                                                                //if (rowmatch > 9)
                                                                //{
                                                                //    rowmatch = 0;
                                                                //    trid += 1;
                                                                //    display = "none";
                                                                //}
                                                        }}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Row End -->
                </div>
                <!-- Bootstrap Container End -->
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    //Javascript function to provide AutoComplete and Intellisense feature for finding Users.
    $(document).ready(function () {
        //alert("sanjay");
        $("#inputCurrencyCode").autocomplete({
            source: function (request, response) {
                //   alert("Hello");
                //  debugger;
                $.ajax({
                    url: '@Url.Action("FindCurrencyCode", "ClaimMasters")',
                    data: "{ 'prefixText': '" + request.term + "' }",
                    dataType: "json",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataFilter: function (data) { return data; },
                    success: function (data) {
                        response($(data, function (item) {
                            return {
                                label: item.value,
                                value: item.value,
                                id: item.id


                            }
                        }))
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        alert(textStatus);
                    }
                });
            },
            minLength: 1,
            select: function (even, ui) {
                $("#inputCurrencyCode").val(ui.item.label);
                $("#inputCurrencyCode").val(ui.item.value);
                return false;

            }
        });

        $("#inputCurrencyDisplayCode").autocomplete({
            source: function (request, response) {
                //  alert("Hello");
                //  debugger;
                $.ajax({
                    url: '@Url.Action("FindCurrencyDisplayCode", "ClaimMasters")',
                    data: "{ 'prefixText': '" + request.term + "' }",
                    dataType: "json",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataFilter: function (data) { return data; },
                    success: function (data) {
                        response($(data, function (item) {
                            return {
                                label: item.value,
                                value: item.value,
                                id: item.PolicyId


                            }
                        }))
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        alert(textStatus);
                    }
                });
            },
            minLength: 1,
            select: function (even, ui) {
                $("#inputCurrencyDisplayCode").val(ui.item.label);
                $("#inputCurrencyDisplayCode").val(ui.item.value);
                return false;

            }
        });


        $("#inputCurrencyDescription").autocomplete({
            source: function (request, response) {
                //  alert("Hello");
                //  debugger;
                $.ajax({
                    url: '@Url.Action("FindCurrencyDesc", "ClaimMasters")',
                    data: "{ 'prefixText': '" + request.term + "' }",
                    dataType: "json",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataFilter: function (data) { return data; },
                    success: function (data) {
                        response($(data, function (item) {
                            return {
                                label: item.value,
                                value: item.value,
                                id: item.PolicyId


                            }
                        }))
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        alert(textStatus);
                    }
                });
            },
            minLength: 1,
            select: function (even, ui) {
                $("#inputCurrencyDescription").val(ui.item.label);
                $("#inputCurrencyDescription").val(ui.item.value);
                return false;

            }
        });


    });
</script>
