@model IEnumerable<MCAS.Web.Objects.MastersHelper.InsuranceModel>
@{
    ViewBag.Title = "InsuranceIndex";
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
}

<h2>InsuranceIndex</h2>
<script src="../../Scripts/jquery-2.1.0.min.js" type="text/javascript"></script>
<div class="dashboard-wrapper">
    <!-- Bootstrap Container Start -->
    <div class="container">
        <!-- Page title start -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    Search Policy</h2>
                
            </div>
        </div>
        <!-- Page title end -->
         <!-- Row start for sub navigation -->
        <hr>
        
        <hr>
        <!-- Row End -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sx-12 col-sm-12">
                <div class="panel panel-secondary">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="panel panel-info">
                                <div class="panel-heading clearfix">
                                    <i class="icon-check-sign"></i>
                                    <h3 class="panel-title">
                                        Insurance Policy information</h3>
                                </div>
                                <div class="panel-sub-heading">
                                    <span class="text-danger">*</span> Search Screen
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("InsuranceIndex", "InsuranceMaster", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                                    {
                                    <div class="row">
                                    <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label" for="inputUserId">
                                                    Enter Policy Code</label>
                                                <div class="col-sm-9">
                                                @*@Html.TextBoxFor(m => m.FirstOrDefault().GroupId, new { style = "width: 200px;", Value = "", id = "GroupId" })*@
                                                    <input type="text" placeholder="" name="inputPolicyCode"  id="inputPolicyCode" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        
                                        
                                        
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 text-center">
                                            @Html.ActionLink("Add New", "InsurancePolicyMasterEditor", "InsuranceMaster", new { @class = "btn btn-info" })
                                            <button type="submit" class="btn btn-info">Search</button>
                                        </div>
                                    </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h4>
                                    Search Results</h4>
                            </div>
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Policy Number
                                                </th>
                                                <th>
                                                    Policy Effective From
                                                </th>
                                                <th>
                                                    Policy Effective To
                                                </th>
                                                <th>
                                                    Deductible
                                                </th>
                                                <th>
                                                    Premium Amount
                                                </th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                        @{
                                            int trid = 1;
                                            int rowmatch = 0;
                                            var display = "";

                                            foreach (var item in Model)
                                            {
                                                rowmatch += 1;
                                                <tr group='@(trid)' style="display:@display;">
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PolicyNo)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PolicyEffectiveFrom)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PolicyEffectiveTo)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Deductible)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PremiumAmount)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "InsurancePolicyMasterEditor", new { Id = item.PolicyId }, new { @class = "btn btn-xs btn-warning" })
                                                        
                                                        @Html.ActionLink("View", "InsurancePolicyMasterEditor", new { Id = item.PolicyId }, new { @class = "btn btn-xs btn-info" })
                                                    </td>
                                                </tr>
                                                if (rowmatch > 9)
                                                {
                                                    rowmatch = 0;
                                                    trid += 1;
                                                    display = "none";
                                                }
                                            }}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @{
                decimal count = (decimal)Model.Count() / 10;
                int totalcount = (int)Math.Ceiling(count);
          
                <div class="col-lg-12 text-center">
                  @*<ul >
                  <li id="liPages" style="font-weight: bold;">Total pages : @totalcount</li></ul>*@
                    
                    <ul class="pagination no-margin">
                        <li id="liprevious" onclick="Pagination('liprevious');"><a href="#">«</a> </li>
                        @for (int j = 0; j < totalcount; j++)
                        {
                            if (j == 0)
                            { 
                            <li id="li@(j + 1)" class="active" onclick="Pagination('li@(j + 1)');"><a href="#">@(j + 1)</a>
                            </li>
                            }
                            else
                            {
                                if (j > 4)
                                {
                            <li id="li@(j + 1)" style="display: none;" onclick="Pagination('li@(j + 1)');" ><a href="#">@(j + 1)</a></li>
                                }
                                else
                                { 
                            <li id="li@(j + 1)" onclick="Pagination('li@(j + 1)');" ><a href="#">@(j + 1)</a></li>
                                }
                            }
                        }
                        <li id="linext" onclick="Pagination('linext');"><a href="#">»</a> </li>
                    </ul>
                </div>
                <div class="col-lg-12">
                    &nbsp;</div>
            }
        </div>
        <!-- Row End -->
    </div>
    <!-- Bootstrap Container End -->
</div>

<script type="text/javascript">

function Pagination(id) {
     var totalcount = Math.ceil(parseFloat(@Model.Count() / 10));
        if (id == "linext") {
            id = "li" + (parseInt($("#oldgroup").val())==totalcount ? totalcount :(parseInt($("#oldgroup").val())+ 1 ));
        }
        if (id == "liprevious") {
            id = "li" + (parseInt($("#oldgroup").val()) == 1 ? 1 : (parseInt($("#oldgroup").val()) - 1));
        }
        var oldgroup_id = $("#oldgroup").val();
        var tabid_id = id.replace("li", "");
        $("#oldgroup").val(tabid_id);
        $("table tr[group=" + oldgroup_id + "]").css("display", "none");
        $("table tr[group=" + tabid_id + "]").css("display", "");
         $('.active').removeClass();
        $('#'+id).addClass("active");

         if(totalcount>0)
        {
          for(i=1;i<=totalcount;i++)
                    {
                     $("#li"+i).css("display", "none");
                    }
            if(tabid_id>1)
            {
                   
                   if(parseFloat( tabid_id)+2 <= parseFloat(totalcount))
                   {
                        for(i=parseFloat( tabid_id==2?3:tabid_id)-2;i<= parseFloat( tabid_id==2?3:tabid_id)+2;i++)
                        {
                            if(i<=totalcount)
                            {
                             $("#li"+i).css("display", "");
                            }
                        }
                    }
                    else
                    {
                        for(i=parseFloat( totalcount)-4;i<= parseFloat( totalcount);i++)
                        {
                           
                             $("#li"+i).css("display", "");
                        }
                    }
            }
             else
            {
           for(i=parseFloat(1);i<= parseFloat( 5);i++)
                        {
                             $("#li"+i).css("display", "");
                        }
            }
        }

    }
</script>
