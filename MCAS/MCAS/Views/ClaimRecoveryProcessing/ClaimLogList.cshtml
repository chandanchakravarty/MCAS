@model IEnumerable<MCAS.Web.Objects.ClaimObjectHelper.LogRequestModel>
@using MCAS.Web.Objects.Resources.ClaimProcessing;
@using MCAS.Web.Objects.Resources.Common;
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Globalisation
@{
    ViewBag.Title = "ClaimLogList";
    Layout = null;
}
<style>
    .whitespace
    {
        padding-right: 1px;
        visibility: hidden;
    }
</style>
<div class="row " id="divdisplay">
    <div class="col-lg-12 text-center">
        <h4 class="text-info">
             @ClaimLogRequest.SearchResults</h4>
    </div>
    <div class="col-lg-12 ">
        <div class="table-responsive col-lg-12" id="Diary_wrapper" style="padding-left: 1px;">
            <table id="tableDiarySrc" cellspacing="0" class="table table-striped table-hover display">
                <thead style="padding: left:20px">
                    <tr>
                        <th style="width: 8%; padding-left: 9px">
                             @ClaimLogRequest.ClaimNo.
                        </th>
                        <th style="width: 6%; padding-left: 9px">
                             @ClaimLogRequest.SubClaimNo.
                        </th>
                        <th style="width: 6%; padding-left: 9px">
                             @ClaimLogRequest.MandateNo.
                        </th>
                        <th style="width: 6%; padding-left: 9px">
                             @ClaimLogRequest.LOGRefNo.
                        </th>
                        <th style="width: 12%; padding-left: 9px">
                             @ClaimLogRequest.Hospital
                        </th>
                        <th style="width: 10%; padding-left: 9px">
                             @ClaimLogRequest.Amount
                        </th>
                        <th style="width: 6%">
                            @Common.Select
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClaimNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubClaimNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MandateNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LogRefNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HospitalName)
                            </td>
                            <td class="format">
                                @Html.DisplayFor(modelItem => item.LOGAmount)
                            </td>
                            <td>
                                @if (item.LogRefNo != "")
                                {
                                    if (item.IsVoid == false)
                                    {
                                    @Html.EncodedActionLink(Common.Edit, "ClaimLogRequestNew","ClaimRecoveryProcessing", new { LogId = item.LogId, ClaimID = item.ClaimID, AccidentClaimId = item.AccidentClaimId, MandateId = item.MandateId, Mode = "Edit" }, new { @class = "btn btn-xs btn-info " }) 
                                    @Html.EncodedActionLink("V", "ClaimLogRequestNew", "ClaimRecoveryProcessing", new { }, new { @class = "btn btn-xs btn-info whitespace" })  
                                    @Html.EncodedActionLink(ClaimLogRequest.Void, "ClaimLogRequestNew", "ClaimRecoveryProcessing", new { LogId = item.LogId, ClaimID = item.ClaimID, AccidentClaimId = item.AccidentClaimId, MandateId = item.MandateId, Mode = "Void" }, new { @class = "btn btn-xs btn-info" })
                                    }

                                    else
                                    {
                                    @Html.EncodedActionLink(Common.View, "ClaimLogRequestNew", "ClaimRecoveryProcessing", new { LogId = item.LogId, ClaimID = item.ClaimID, AccidentClaimId = item.AccidentClaimId, MandateId = item.MandateId, Mode = "View" }, new { @class = "btn btn-xs btn-info" })
                                    }
                                }
                                else
                                {
                                    @Html.EncodedActionLink(ClaimLogRequest.Create, "ClaimLogRequestNew", "ClaimRecoveryProcessing", new { LogId = 0, ClaimID = item.ClaimID, AccidentClaimId = item.AccidentClaimId, MandateId = item.MandateId, Mode = "New" }, new { @class = "btn btn-xs btn-info" })
                                }
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">

    SetDivPosition();
    function SetDivPosition() {
        $("#sidebar").css("position", "fixed").css("z-index", "1033");
        $("#header").addClass("navbar-fixed-top");
        $("#reg2").css("top", $("#header").height());
        $("#testdiv").css("height", parseInt($("#reg").height()) + parseInt($("#reg2").height()));
    }
</script>
