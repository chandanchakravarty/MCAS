@using MCAS.Web.Objects.CommonHelper
@model IEnumerable<MCAS.Web.Objects.MastersHelper.LogRequestDocumentModel>
@using MCAS.Globalisation
@{
    ViewBag.Title = "LogRequestDocument";
    Layout = null;
    var mMCASQueryString = Html.MCASQueryString(Request.QueryString);
    var accidentClaimId = mMCASQueryString["AccidentClaimId"];
    var claimId = mMCASQueryString["ClaimID"];
}
@*<script src="@Url.Content("~/Scripts/jquery-2.1.0.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@
<style type="text/css">
    table tr.separator
    {
        height: 10px;
    }
</style>
<link href="@Url.Content("~/Content/import.css")" rel="Stylesheet" media="screen" />
<!-- Font Awesome CSS -->
<link href="@Url.Content("~/fonts/font-awesome.css")" rel="stylesheet" type="text/css" />

<!-- Data tables -->
@*<script src="@Url.Content("~/Scripts/jquery.datatables.js")" type="text/javascript"></script>*@
<div>
    <!-- Bootstrap Container Start -->
    <div class="container">
        <!-- Page title start -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                </h2>
                <ul class="breadcrumb">
                    <li>View Documents </li>
                </ul>
            </div>
        </div>
        <!-- Page title end -->
        <!-- Row start -->
        <!-- Row end -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sx-12 col-sm-12">
                <div class="panel panel-secondary">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <i class="icon-bar-chart"></i>Preview Documents</h3>
                    </div>
                    <div style="color: Red; font-weight: bold;" class="has-error" id="error">
                        <p align="center">
                            @if (TempData["result"] != null)
                            {
                                @TempData["result"]
                            }
                        </p>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("LogRequestDocument", "ClaimRecoveryProcessing", new { ClaimID = claimId, AccidentClaimId = @accidentClaimId }, FormMethod.Post, new { id = "myForm", role = "form", @class = "form-horizontal" }))
                        {
               
                            <div class="row">
                                <div class="col-lg-12 text-center">
                                    <h4 class="text-info">
                                    </h4>
                                    <hr>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <div class="row-fluid">
                                        <div class="dataTables_wrapper" id="Diary_wrapper" role="grid" style="border:10px">
                                            <table width="100%" class="display" id="tableDiarySrc" cellspacing="0" >
                                                <thead>
                                                    <tr>
                                                        <th align="center">
                                                            Defense
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                    
                            foreach (var item in Model)
                            {
                  
                                                        <tr class="separator" style="cursor: pointer;">
                                                            <td style="width: 60%;">
                                                                @Html.DisplayFor(modelItem => item.DocumentName)
                                                            </td>
                                                            <td>
                                                                @Html.EncodedActionLink("View", "PreviewDocument", "ClaimRecoveryProcessing", new { DocumentId = item.DocumentId }, new { id = "Download", @class = "btn btn-xs btn-warning", target = "_blank" })
                                                                @Html.EncodedActionLink("Generate", "LogGenerateDocument", "ClaimRecoveryProcessing", new { AccidentClaimId = @accidentClaimId, DocumentId = item.DocumentId }, new { id = "Generate", @class = "btn btn-xs btn-warning", target = "_blank" })
                                                            </td>
                                                        </tr>
                                         
                            }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="row top-buffer">
                                    </div>
                                    <div class="row top-buffer">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                &nbsp;</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
