@model MCAS.Web.Objects.MastersHelper.DepartmentsListItems
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Globalisation
@{
    ViewBag.Title = "UserDeptEditor";
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    var mMCASQueryString = Html.MCASQueryString(Request.QueryString);
    var pageMode = mMCASQueryString["pageMode"];
    var btndisplay = "yes";
    if (pageMode == "View")
    {
        btndisplay = "none";
    }
    SecurityPermissions myPemissions = (SecurityPermissions)ViewData["UserPermissions"];
    System.Resources.ResourceManager PageResource = (new MCAS.Web.Objects.MastersHelper.TransactionModel()).GetResourceManager(Model.Resource);
    var DeptName = Model.DeptName == null ? "" : Model.DeptName;
    var DeptCode = Model.DeptCode == null ? "" : Model.DeptCode;
}
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <!-- Bootstrap Container Start -->
    <div class="container">
        <!-- Page title start -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    @MCAS.Web.Objects.Resources.Common.Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@PageResource.GetString("UserAdmin")</li>
                    <li>@PageResource.GetString("DepartmentMasterDetails")</li>
                </ul>
            </div>
        </div>
        <!-- Page title end -->
        <!-- Row start for sub navigation -->
        <hr />
        <div class="row">
            <div class="col-lg-12 text-left">
                <div class="btn-group less-bottom-margin">
                    @*<a class="btn btn-default" href='@Url.Action("UserEntityIndex", "UserAdmin")'>Entity Details</a>*@
                    <a class="btn btn-default" href='@Url.Action("UserGroupsIndex", "UserAdmin")'>@PageResource.GetString("UserGroups")</a> 
                    <a class="btn btn-default" href='@Url.Action("UserAdminMastersList", "UserAdmin")'>@PageResource.GetString("User")</a>
                    <a class="btn btn-info" href='@Url.Action("UserDeptIndex", "UserAdmin")'>@PageResource.GetString("DepartmentMaster")</a>
                    <a class="btn btn-default" href='@Url.Action("PasswordSetUpEditor", "UserAdmin")'>@PageResource.GetString("PasswordSetup")</a>  @*<a class="btn btn-default" href='@Url.Action("ReleasedLockedUser", "UserAdmin")'>
                                Release Locked Users</a> <a class="btn btn-default" href='@Url.Action("UserCountryIndex", "UserAdmin")'>Country for User Access</a>*@
                </div>
            </div>
        </div>
        <!-- Row End -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">@PageResource.GetString("DepartmentMasterDetails")</h3>
                    </div>
                    <div style="color: Red; font-weight: bold;" class="has-error" id="error">
                        <p align="center">
                            @if (TempData["notice"] != null)
                            {
                                @TempData["notice"]
                            }
                        </p>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("UserDeptEditor", "UserAdmin", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "userdeptsform", name = "userdeptsform" }))
                        {
                            @Html.ValidationSummary(true)
              
                            <div class="row">
                                <div class="col-lg-6">
                                    @Html.HiddenFor(m => m.DeptId)
                                    <div class="form-group">
                                        <label class="col-sm-4" for="inputDeptCode">
                                           @PageResource.GetString("DeptCode")&nbsp;<span class="text-danger">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.DeptCode, new { id = "DeptCode", @class = "form-control", @maxlength = 10 })
                                            @Html.ValidationMessageFor(m => m.DeptCode)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-4" for="inputDeptName">
                                             @PageResource.GetString("DeptName")&nbsp;<span class="text-danger">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.DeptName, new { @class = "form-control", @maxlength = 50 })
                                            @Html.ValidationMessageFor(m => m.DeptName)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12 text-center">
                                    @if (@myPemissions.Write)
                                    {
                                        <button id="btnSave" style="display:@btndisplay" class="btn btn-info">
                                             @PageResource.GetString("Save")</button>
                                    }
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    @Html.ActionLink(@PageResource.GetString("Back"), "UserDeptIndex", null, new { @class = "btn btn-info" })&nbsp;&nbsp;&nbsp;&nbsp;
                                    <button style="display: none" type="button" class="btn btn-info" onclick="onclickcancel();">
                                         @PageResource.GetString("Cancel")</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Row End -->
        <div class="panel">
            @Html.Partial("~/Views/Shared/_TimeStamp.cshtml", Model)
        </div>
    </div>
    <!-- Bootstrap Container End -->
</div>
<script type="text/javascript">
    function onclickcancel() {
        $('#userdeptsform')[0].reset();
    }
</script>
<script type="text/javascript">
    $(function () {
        $(document).on("focus", ":input", function () {
            $(this).attr("autocomplete", "off")
        });
        $("#DeptCode").blur(function (event) {
            var depcode = $.trim($("#DeptCode").val());
            $.ajax({
                type: "POST",
                url: '@Url.Action("CheckDeptCode", "UserAdmin")',
                data: {
                    deptcode: depcode,
                    dcode: '@Model.DeptCode'
                },
                success: function (a) {
                    if (a == true && (getQueryVariable("pageMode") != "Edit")) {
                        alert("Duplicate Department Code.");
                        $("#DeptCode").val('');
                       // $("#btnSave").attr("disabled", "disabled");
                    }
                    else if (($("#DeptCode").val() != '@Model.DeptCode') && a == true) {
                        alert("Duplicate Department Code.");
                        $("#DeptCode").val('');
                        //$("#btnSave").attr("disabled", "disabled");
                    }
                    else {
                        //$("#btnSave").removeAttr("disabled");
                    }

                }
            });
        });
        $("#DeptName").blur(function (event) {
            var depname = $.trim($("#DeptName").val());
            $.ajax({
                type: "POST",
                url: '@Url.Action("CheckDeptName", "UserAdmin")',
                data: {
                    deptname: depname,
                    dcode: '@Model.DeptName'
                },
                success: function (a) {
                    if (a == true && (getQueryVariable("pageMode") != "Edit")) {
                        alert("Duplicate department name.");
                        $("#DeptName").val('');
                        //$("#btnSave").attr("disabled", "disabled");
                    }
                    else if (($("#DeptCode").val() != '@Model.DeptName') && a == true) {
                        alert("Duplicate department name.");
                        $("#DeptName").val('');
                        //$("#btnSave").attr("disabled", "disabled");
                    }
                    else {
                        //$("#btnSave").removeAttr("disabled");
                    }

                }
            });
        });
        function getQueryVariable(a) {
            for (var e = "@MenuListItem.ClaimTabs.GetQueryStringVal()".replace(/amp;/ig, "").split("&"), d = 0; d < e.length; d++) {
                var b = e[d].split("=");
                if (b[0] == a) return b[1]
            }
        };

    })
    if ('@pageMode' == 'View') {
        $('#userdeptsform').find('input, textarea, select').attr('disabled', 'disabled');
    } 
</script>
