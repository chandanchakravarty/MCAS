@model MCAS.Web.Objects.CommonHelper.UserCountryListItems
@using MCAS.Web.Objects.CommonHelper
@{
    ViewBag.Title = "UserCountryEditor";
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    var pageMode = Request.QueryString["pageMode"];
    var btndisplay = "yes";
    if (pageMode == "View")
    {
        btndisplay = "none";
    }
    SecurityPermissions myPemissions = (SecurityPermissions)ViewData["UserPermissions"];
}
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <!-- Bootstrap Container Start -->
    <div class="container">
        <!-- Page title start -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    System Admin</h2>
                <ul class="breadcrumb">
                    <li>User Admin</li>
                    <li>Country for User Access Details</li>
                </ul>
            </div>
        </div>
        <!-- Page title end -->
        <!-- Row start for sub navigation -->
        <hr />
        <div class="row">
            <div class="col-lg-12 text-left">
                <div class="btn-group less-bottom-margin">
                    @*<a class="btn btn-default" href='@Url.Action("UserEntityIndex", "UserAdmin")'>Entity
                        Details</a>*@ <a class="btn btn-default" href='@Url.Action("UserGroupsIndex", "UserAdmin")'>
                            User Groups</a> <a class="btn btn-default" href='@Url.Action("UserAdminMastersList", "UserAdmin")'>
                                User</a> <a class="btn btn-default" href='@Url.Action("UserDeptIndex", "UserAdmin")'>
                                    Department Master</a> <a class="btn btn-default" href='@Url.Action("PasswordSetUpEditor", "UserAdmin")'>
                                        Password Setup</a> <a class="btn btn-default" href='@Url.Action("ReleasedLockedUser", "UserAdmin")'>
                                            Release Locked Users</a> <a class="btn btn-info" href='@Url.Action("UserCountryIndex", "UserAdmin")'>
                                                Country for User Access</a>
                </div>
            </div>
        </div>
        <!-- Row End -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            Country for User Access Details</h3>
                    </div>
                    <div style="color: Red; font-weight: bold;" class="has-error" id="error">
                        <p align="center">
                            @if (TempData["notice"] != null)
                            {
                                @TempData["notice"]
                            }
                        </p>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("UserCountryEditor", "UserAdmin", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "usercountryform", name = "usercountryform" }))
                        {
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => m.CountryCode)
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label" for="inputCountryCode">
                                            Country Code</label>
                                        <div class="col-sm-6 control-label" style="text-align: left!important;">
                                            <b>
                                                @Html.DisplayFor(m => m.CountryCode, new { id = "CountryCode", @class = "form-control" })
                                            @*@Html.TextBoxFor(m => m.CountryCode, new { id = "CountryCode", @class = "form-control", @readonly = "readonly" })*@</b>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label" for="inputCountryName">
                                            Country Name &nbsp;<span class="text-danger">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.DropDownListFor(m => m.CountryShortCode, new SelectList(Model.countrylist, "CountryShortCode", "CountryName"), new { @class = "col-lg-12 form-control", id = "CountryShrCode" })<br />
                                            @Html.ValidationMessageFor(m => m.CountryShortCode)<br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label" for="inputStatus">
                                            Status&nbsp;<span class="text-danger">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.DropDownListFor(m => m.Status, new SelectList(Model.Statuslist, "Lookup_value", "Lookup_desc", "Active"), new { @class = "col-lg-12 form-control", id = "Status" })<br />
                                            @Html.ValidationMessageFor(m => m.Status)<br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="clearfix igr col-md-12 text-center">
                                    @if (@myPemissions.Write)
                                    {
                                        <input id="btnSave" class="btn btn-info" style="display:@btndisplay" type="button" value="Save" />
                                    }
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    @Html.ActionLink("Back", "UserCountryIndex", null, new { @class = "btn btn-info" })&nbsp;&nbsp;&nbsp;&nbsp;
                                    <button style="display: none" type="button" class="btn btn-info" onclick="onclickcancel();">
                                        Cancel</button>
                                </div>
                            </div>  
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Row End -->
    </div>
    <!-- Bootstrap Container End -->
</div>
<script type="text/javascript">
    function onclickcancel() {
        $('#usercountryform')[0].reset();
    }
</script>
<script type="text/javascript">
    $(function () {

        $("#btnSave").click(function (event) {
            var country = $("#CountryShrCode").val();
            $.ajax({
                type: "POST",
                url: '@Url.Action("UserCountryExist", "UserAdmin")',
                data: {
                    CountryCode: country
                },
                success: function (a) {
                    if (a == true && (getQueryVariable("pageMode") != "Edit")) {
                        alert("Already Exist.");
                        return false;
                        $("#btnSave").attr("disabled", "disabled");
                    } else if (($("#CountryShrCode").val() != '@Model.CountryShortCode') && a == true) {
                        alert("Already Exist.");

                        $("#btnSave").attr("disabled", "disabled");
                    }
                    else {
                        $("#btnSave").removeAttr("disabled");
                        $("#usercountryform").submit();
                    }

                }
            });

        });
        function getQueryVariable(a) {
            for (var e = "@MenuListItem.ClaimTabs.GetQueryStringVal()".replace(/amp;/ig, "").split("&"), d = 0; d < e.length; d++) {
                var b = e[d].split("=");
                if (b[0] == a) return b[1]
            }
        };

    });
    if ('@pageMode' == 'View') {
        $('#usercountryform').find('input, textarea, select').attr('disabled', 'disabled');
    } 
</script>
