                    </div>
                    <div class="panel-sub-heading">
                        <span class="text-danger">*</span> Search Screen
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("UserCountryIndex", "UserAdmin", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                        {
                            
                                <div class="col-lg-6">
                                    <div class="form-group">
