                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" for="inputUsrCountryName">
                                            Country Name</label>
                                        <div class="col-sm-6">
                                            <input type="text" value="@ViewBag.countryname"  name="inputUsrCountryName" id="inputUsrCountryName" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            
                            
                            <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" for="inputUsrStatus">
                                            Status</label>
                                        <div class="col-sm-6">
                                        <select name="ddlStatusCode" id="ddlStatusCode" class="col-lg-12 form-control"></select>
                                        </div>
                                    </div>
                                </div>
                            
                            <br />
                            <br />
                            <div class="row">
                                <div class="col-lg-12 text-center">
                                    @*<button type="submit" class="btn btn-primary">
                                        Back</button>*@
                                        <button type="submit" class="btn btn-info">Search</button>&nbsp;&nbsp;&nbsp;&nbsp;
                                         @if (@myPemissions.Write)
                                         {
                                            @Html.ActionLink("Add New", "UserCountryEditor", "UserAdmin", new { @class = "btn btn-info" })
                                         }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Row End -->
        <!-- Row Start -->
        <div class="panel-body">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h4 class="text-info">
                    Search Results</h4>
                <hr>
            </div>
                <div class="col-lg-12">
                <div class="table-responsive">
                <div class="row-fluid">
                <div class="dataTables_wrapper" id="Diary_wrapper" role="grid">
                    <table id="tableDiarySrc" width="100%" class="table table-striped table-hover display">
                        <thead>
                            <tr>
                                <th style="width:20%">
                                    Country Code
                                </th>
                                <th style="width:20%">
                                    Country Short Code
                                </th>
                                <th style="width:20%">
                                    Country Name
                                </th>
                                <th style="width:20%">
                                    Status
                                </th>
                                <th style="width:20%">
                                    <span class="block text-right">Select</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int trid = 1;
                                int rowmatch = 0;
                                var display = "";
                                var usrstatus = "";
                                var countryShortCode="";
                                var CountryName="";
                                
                                foreach (var item in Model)
                                {
                                    rowmatch += 1;
                                    if (item.Status == "Y")
                                    {
                                        usrstatus = "Active";
                                    }
                                    else
                                    {
                                        usrstatus = "InActive";
                                    }
                                    
                                    if(item.CountryShortCode==null)
                                    {
                                        countryShortCode = "N/A";
                                    } else
                                    {
                                        countryShortCode = item.CountryShortCode;
                                    }
                                    
                                    if(item.CountryName==null){
                                        CountryName = "N/A";
                                    } else {
                                        CountryName = item.CountryName;
                                    }
                                    
                                <tr group='@(trid)' style="display:@display;">
                                    <td style="width:20%">
                                        @Html.DisplayFor(modelItem => item.CountryCode)
                                    </td>
                                    <td style="width:20%">
                                    @countryShortCode
                                        @*@Html.DisplayFor(modelItem => item.CountryShortCode)*@
                                    </td>
                                    <td style="width:20%">
                                    @CountryName
                                        @*@Html.DisplayFor(modelItem => item.CountryName)*@
                                    </td>
                                    
                                    <td style="width:20%">
                                        @usrstatus
                                        @*@Html.DisplayFor(modelItem => item.Status)*@
                                    </td>
                                    <td style="width:20%">
                                     @if (@myPemissions.Write)
                                     {
                                        @Html.ActionLink("Edit", "UserCountryEditor", new { CountryCode = item.CountryCode, pageMode = "Edit" }, new { @class = "btn btn-xs btn-warning" }) 
                                     }
                                        @Html.ActionLink("View", "UserCountryEditor", new { CountryCode = item.CountryCode, pageMode = "View" }, new { @class = "btn btn-xs btn-info" })
                                    </td>
                                </tr>
                                }}
                        </tbody>
                    </table>
                    </div>
                    </div>
                </div>
            </div>
            
        </div>
        </div>
        <!-- Row End -->
    </div>
    <!-- Bootstrap Container End -->
</div>

