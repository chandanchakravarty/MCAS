<script type="text/javascript">

    $(document).ready(function () {
        $(document).on("focus", ":input", function () {
            $(this).attr("autocomplete", "off")
        });
        loadBranchList();
        loadDeptList();
        loadProductList();
        loadGroupStatus();
    });

    function loadBranchList() {
        $.ajax({
            url: '@(Url.Action("FillBranchCodeList"))',
            cache: false,
            success: function (data) {
                $("#ddlBranchCode").empty();
                $.each(data, function (index, optiondata) {
                    if (optiondata.BranchCode == '@ViewBag.branchcode')
                        $("#ddlBranchCode").append("<option value='" + optiondata.BranchCode + "' selected=selected>" + optiondata.BranchName + "</option>");
                    else
                        $("#ddlBranchCode").append("<option value='" + optiondata.BranchCode + "'>" + optiondata.BranchName + "</option>");
                });
            },
            error: function (reponse) {
                if (reponse.readyState != "0") {
                    alert("error : " + reponse);
                }
            }
        });
    }

    function loadDeptList() {
        $.ajax({
            url: '@(Url.Action("FillDeptCodeList"))',
            cache: false,
            success: function (data) {
                $("#ddlDeptCode").empty();
                $.each(data, function (index, optiondata) {
                    if (optiondata.DeptCode == '@ViewBag.deptcode')
                        $("#ddlDeptCode").append("<option value='" + optiondata.DeptCode + "' selected=selected>" + optiondata.DeptName + "</option>");
                    else
                        $("#ddlDeptCode").append("<option value='" + optiondata.DeptCode + "'>" + optiondata.DeptName + "</option>");
                });
            },
            error: function (reponse) {
                if (reponse.readyState != "0") {
                    alert("error : " + reponse);
                }
            }
        });
    }

    function loadProductList() {
        $.ajax({
            url: '@(Url.Action("FillProductDescription"))',
            cache: false,
            success: function (data) {
                $("#ddlProductCode").empty();
                $.each(data, function (index, optiondata) {
                    if (optiondata.ProductCode == '@ViewBag.mainclas')
                        $("#ddlProductCode").append("<option value='" + optiondata.ProductCode + "' selected=selected>" + optiondata.ProductDisplayName + "</option>");
                    else
                        $("#ddlProductCode").append("<option value='" + optiondata.ProductCode + "'>" + optiondata.ProductDisplayName + "</option>");
                });
            },
            error: function (reponse) {
                if (reponse.readyState != "0") {
                    alert("error : " + reponse);
                }
            }
        });
    }



    function loadGroupStatus() {
        $.ajax({
            url: '@(Url.Action("FillStatus"))',
            cache: false,
            success: function (data) {
                $("#ddlStatusCode").empty();
                $.each(data, function (index, optiondata) {
                    if (optiondata.Lookup_value == '@ViewBag.userstatus')
                        $("#ddlStatusCode").append("<option value='" + optiondata.Lookup_value + "' selected=selected>" + optiondata.Lookup_desc + "</option>");
                    else
                        $("#ddlStatusCode").append("<option value='" + optiondata.Lookup_value + "'>" + optiondata.Lookup_desc + "</option>");
                });
            },
            error: function (reponse) {
                if (reponse.readyState != "0") {
                    alert("error : " + reponse);
                }
            }
        });
    }
</script>
