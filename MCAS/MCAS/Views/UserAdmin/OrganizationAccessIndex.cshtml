@model  IEnumerable<MCAS.Web.Objects.CommonHelper.UserAdminModel>
@using MCAS.Web.Objects.CommonHelper
@{
    ViewBag.Title = "OrganizationAccessIndex";
    Layout = null;
    SecurityPermissions myPemissions = (SecurityPermissions)ViewData["UserPermissions"];
    @Html.Hidden("oldgroup", 1)
    var user = TempData["user"];   
}
<link href="@Url.Content("~/Content/multiple-select.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-2.1.0.min.js")" type="text/javascript"></script>
<div class="panel-body">
    @using (Html.BeginForm("OrganizationAccessIndex", "UserAdmin", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "orgIndexform", name = "orgIndexform" }))
    {
        <h5 class="text-info">
            Organization Access</h5>
        <hr />
        
        <div class="panel-body">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th style="width:20%">
                                    Organization Category
                                </th>
                                <th style="width:60%">
                                    Organization Name
                                </th>
                                 <th style="width:20%">
                                   Select
                                 </th>
                                
                               @* @if (@myPemissions.Write)
                                {
                                <th style="width:20%">
                                   Select
                                 </th>
                                }*@
                            </tr>
                        </thead>
                        <tbody>
                            @{
        int trid = 1;
        int rowmatch = 0;
        var display = "";

        foreach (var item in Model)
        {
            rowmatch += 1;
                                <tr group='@(trid)' style="display:@display;">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrganizationCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.organizationName)
                                    </td>
                                                                        
                                    <td>
                                     @Html.ActionLink("Select", "OrganizationAccess", new {UserId = @user }, new { @class = "btn btn-xs btn-info" })
                                     @* <button class="btn btn-xs btn-info" id="btnSubmit" type="submit">
                                        Select</button>*@
                                  @*  @if (@myPemissions.Write)
                                    {
                                        @Html.ActionLink("Select", "ClaimNotesEditor", new { PolicyId = @policyid, ClaimId = item.ClaimId, NoteId = item.NoteId }, new { @class = "btn btn-xs btn-info" })
                                    }*@
                                    </td>
                                </tr>
            if (rowmatch > 9)
            {
                rowmatch = 0;
                trid += 1;
                display = "none";
            }
        }}
                        </tbody>
                    </table>
                </div>
            </div>
            @{
        decimal count = (decimal)Model.Count() / 10;
        int totalcount = (int)Math.Ceiling(count);
                <div class="row">
                    <div class="clearfix igr col-md-1 text-center">
                        <div class="form-group">
                            <a class="btn btn-info" id="Previous">Previous</a>
                        </div>
                    </div>
                    <div class="col-lg-10 text-center">
                        <ul class="pagination no-margin">
                            <li id="liprevious" onclick="Pagination('liprevious');"><a href="#">«</a> </li>
                            @for (int j = 0; j < totalcount; j++)
                            {
                                if (j == 0)
                                { 
                                <li id="li@(j + 1)" class="active" onclick="Pagination('li@(j + 1)');"><a href="#">@(j + 1)</a>
                                </li>
                                }
                                else
                                {
                                    if (j > 4)
                                    {
                                <li id="li@(j + 1)" style="display: none;" onclick="Pagination('li@(j + 1)');" ><a
                                    href="#">@(j + 1)</a></li>
                                    }
                                    else
                                    { 
                                <li id="li@(j + 1)" onclick="Pagination('li@(j + 1)');" ><a href="#">@(j + 1)</a></li>
                                    }
                                }
                            }
                            <li id="linext" onclick="Pagination('linext');"><a href="#">»</a> </li>
                        </ul>
                    </div>
                    <div class="clearfix igr col-md-1 text-center">
                        <div class="form-group">
                            <a class="btn btn-info" id="Next">Next</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


<script type="text/javascript">

function Pagination(id) {
     var totalcount = Math.ceil(parseFloat(@Model.Count() / 10));
        if (id == "linext") {
            id = "li" + (parseInt($("#oldgroup").val())==totalcount ? totalcount :(parseInt($("#oldgroup").val())+ 1 ));
        }
        if (id == "liprevious") {
            id = "li" + (parseInt($("#oldgroup").val()) == 1 ? 1 : (parseInt($("#oldgroup").val()) - 1));
        }
        var oldgroup_id = $("#oldgroup").val();
        var tabid_id = id.replace("li", "");
        $("#oldgroup").val(tabid_id);
        $("table tr[group=" + oldgroup_id + "]").css("display", "none");
        $("table tr[group=" + tabid_id + "]").css("display", "");
         $('.active').removeClass();
        $('#'+id).addClass("active");

         if(totalcount>0)
        {
          for(i=1;i<=totalcount;i++)
                    {
                     $("#li"+i).css("display", "none");
                    }
            if(tabid_id>1)
            {
                   
                   if(parseFloat( tabid_id)+2 <= parseFloat(totalcount))
                   {
                        for(i=parseFloat( tabid_id==2?3:tabid_id)-2;i<= parseFloat( tabid_id==2?3:tabid_id)+2;i++)
                        {
                            if(i<=totalcount)
                            {
                             $("#li"+i).css("display", "");
                            }
                        }
                    }
                    else
                    {
                        for(i=parseFloat( totalcount)-4;i<= parseFloat( totalcount);i++)
                        {
                           
                             $("#li"+i).css("display", "");
                        }
                    }
            }
             else
            {
           for(i=parseFloat(1);i<= parseFloat( 5);i++)
                        {
                             $("#li"+i).css("display", "");
                        }
            }
        }

    }
</script>

