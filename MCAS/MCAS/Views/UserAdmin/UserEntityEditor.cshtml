@model MCAS.Web.Objects.MastersHelper.BranchListItems
@using MCAS.Web.Objects.CommonHelper
@{
    ViewBag.Title = "UserEntityEditor";
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    var pageMode = Request.QueryString["pageMode"];
    var btndisplay = "yes";
    if (pageMode == "View")
    {
        btndisplay = "none";
    }
    var branch = Model.BranchCode;
    var br = Model.BranchCode == null ? null : Model.BranchCode;
    SecurityPermissions myPemissions = (SecurityPermissions)ViewData["UserPermissions"];
}

<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <!-- Bootstrap Container Start -->
    <div class="container">
        <!-- Page title start -->
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>
                    System Admin</h2>
                <ul class="breadcrumb">
                    <li>User Admin</li>
                    <li>Entity Details</li>
                </ul>
            </div>
        </div>
        <!-- Page title end -->
        <!-- Row start for sub navigation -->
        <hr />
        <div class="row">
            <div class="col-lg-12 text-left">
                <div class="btn-group less-bottom-margin">
                    <a class="btn btn-info" href='@Url.Action("UserEntityIndex", "UserAdmin")'>Entity Details</a>
                    <a class="btn btn-default" href='@Url.Action("UserGroupsIndex", "UserAdmin")'>User Groups</a>
                    <a class="btn btn-default" href='@Url.Action("UserAdminMastersList", "UserAdmin")'>User</a>
                    <a class="btn btn-default" href='@Url.Action("UserDeptIndex", "UserAdmin")'>Department Master</a> 
                    <a class="btn btn-default" href='@Url.Action("PasswordSetUpEditor", "UserAdmin")'>Password Setup</a> 
                    <a class="btn btn-default" href='@Url.Action("ReleasedLockedUser", "UserAdmin")'>Release Locked Users</a> 
                    @*<a class="btn btn-default" href='@Url.Action("UserCountryIndex", "UserAdmin")'>Country for User Access</a>*@
                </div>
            </div>
        </div>
        <hr />
        <!-- Row End -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">
                            Entity Details</h3>
                    </div>
                    <div style="color: Red; font-weight: bold;" class="has-error" id="error">
                        <p align="center">
                            @if (TempData["notice"] != null)
                            {
                                @TempData["notice"]
                            }
                        </p>
                    </div>
                    <div class="panel-body">
                    @using (Html.BeginForm("UserEntityEditor", "UserAdmin", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "userentityform", name = "userentityform" }))
                    {
                        @Html.ValidationSummary(true)
                     <div class="row">
                        <div class="clearfix igr col-md-12">
                                <div class="col-lg-6">
                                @Html.HiddenFor(m => m.BranchId)
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="inputCode">
                                            Entity Code&nbsp;<span class="text-danger">*</span></label>
                                        <div class="col-sm-7">
                                        @Html.TextBoxFor(m => m.BranchCode, new { id = "BranchCode", @maxlength = "3", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.BranchCode)
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label" for="inputName">
                                            Entity Name&nbsp;<span class="text-danger">*</span></label>
                                        <div class="col-sm-7">
                                        @Html.TextBoxFor(m => m.BranchName, new { id = "BranchName", @maxlength = "30", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.BranchName)
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>

                        <div class="row">
                        <div class="clearfix igr col-md-12">
                            
                                </div>
                        </div>
                        <div class="row">
                            <div class="clearfix igr col-md-12 text-center">
                             @if (@myPemissions.Write)
                             {
                            <button id="btnSave" style="display:@btndisplay" class="btn btn-info">Save</button>
                             }       &nbsp; &nbsp; &nbsp; &nbsp;
                                @Html.ActionLink("Back", "UserEntityIndex", null, new { @class = "btn btn-info" })&nbsp;&nbsp;&nbsp;&nbsp;
                                
                                @*@Html.ActionLink("Cancel", "UserEntityIndex", null, new { @class = "btn btn-info" })*@
                                <button style="display:none" type="button" class="btn btn-info" onclick="onclickcancel();">Cancel</button>
                            </div>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>
        <!-- Row End -->
    </div>
    <!-- Bootstrap Container End -->
</div>

<script type="text/javascript">
    function onclickcancel() {
        $('#userentityform')[0].reset();
    }
</script>



<script type="text/javascript">
    $(function () {
        $(document).on("focus", ":input", function () {
            $(this).attr("autocomplete", "off")
        });
        $("#BranchCode").blur(function (event) {
            var branch = $.trim($("#BranchCode").val());
            $.ajax({
                type: "POST",
                url: '@Url.Action("CheckBranchCode", "UserAdmin")',
                data: {
                    BranchCode: branch,
                    Bcode: '@Model.BranchCode'
                },
                success: function (a) {
                    if (a == true && (getQueryVariable("pageMode") != "Edit")) {
                        alert("Duplicate Entity Code.");
                        $("#btnSave").attr("disabled", "disabled");
                    }
                    else if (($("#BranchCode").val() != '@Model.BranchCode') && a == true) {
                        alert("Duplicate Entity Code.");
                        $("#btnSave").attr("disabled", "disabled");
                    }
                    else {
                        $("#btnSave").removeAttr("disabled");
                    }

                }
            });
        });
        function getQueryVariable(a) {
            for (var e = "@MenuListItem.ClaimTabs.GetQueryStringVal()".replace(/amp;/ig, "").split("&"), d = 0; d < e.length; d++) {
                var b = e[d].split("=");
                if (b[0] == a) return b[1]
            }
        };

    })
    if ('@pageMode'== 'View') {
        $('#userentityform').find('input, textarea, select').attr('disabled', 'disabled');
    }
</script>
