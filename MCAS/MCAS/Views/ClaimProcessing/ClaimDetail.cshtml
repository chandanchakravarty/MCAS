@model MCAS.Web.Objects.ClaimObjectHelper.ClaimAccidentDetailsModel
@{  
    var ipnum = Model.IPNo != null ? Model.IPNo.ToString().Split('.')[0] : "";
    Layout = null;
}
<link href="@Url.Content("~/Content/import.css")" rel="Stylesheet" media="screen" />
<link href="@Url.Content("~/fonts/font-awesome.css")" rel="stylesheet" type="text/css" />
<link rel="stylesheet" media="all" type="text/css" href="@Url.Content("~/Content/jquery-ui.css")" />
<div class="">
    <div class="container">
        <div class="row ">
            <div class="col-lg-12 text-center">
                @*<h4 class="text-info">
                        Claim Details</h4>*@
            </div>
            <div class="col-lg-12 ">
                <div class="table-responsive col-lg-12" id="Diary_wrapper" style="padding-left: 1px;">
                    <table id="tableDiarySrc" cellspacing="0" class="table display">
                        <tr>
                            <td style="width: 25%">
                                IP No.:
                            </td>
                            <td>
                                @ipnum
                            </td>
                            <td style="width: 20%">
                                Claim No:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.ClaimNo, new { id = "inputClaimNo" })
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 25%">
                                Bus Service No:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.BusServiceNo, new { id = "inputBusServiceNo" })
                            </td>
                            <td style="width: 20%">
                                Vehicle No:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.VehicleNo, new { id = "inputVehicleNo" })
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 25%">
                                Accident Date:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.AccidentDate, new { id = "accidentDate" })
                            </td>
                            <td style="width: 20%">
                                Driver Code:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.DriverEmployeeNo, new { id = "driverCode" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Driver Name:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.DriverName, new { id = "driverName" })
                            </td>
                            <td>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
