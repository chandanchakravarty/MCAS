@model IEnumerable<MCAS.Web.Objects.ClaimObjectHelper.ClaimAccidentDetailsModel>
@{
    var accidentClaimId = TempData["ReportedClaimAccidentId"];
    TempData.Keep("ReportedClaimAccidentId");
    Layout = null;
}

@using (Html.BeginForm("LinkReportedList", "ClaimProcessing", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "ReportedClaimList", name = "ReportedClaimList" }))
{
<div class="row">
    <div style="position: relative!important">
        <div class="col-lg-12 text-center">
            <h4 class="text-info">
                Un-Reported Claim Detail</h4>
        </div>
        @Html.Action("ClaimDetail", "ClaimProcessing", new { AccidentClaimId = @accidentClaimId })
    </div>
</div>
<div class="row ">
    <div class="col-lg-12 text-center">
        <h4 class="text-info">
            Reported Claim List</h4>
    </div>
    
    <hr />
    <div class="col-lg-12 ">
        <div class="table-responsive col-lg-12" id="Diary_wrapper" style="padding-left: 1px;">
            <table id="tableDiarySrc" cellspacing="0" class="table table-striped table-hover display">
                <thead style="padding: left:20px">
                    <tr>
                        <th style="width: 2%">
                        </th>
                        <th style="width: 8%">
                            Claim No.
                        </th>
                        <th style="width: 6%">
                            Vehicle No.
                        </th>
                        <th style="width: 6%">
                            Bus Service No.
                        </th>
                        <th style="width: 12%">
                            Date of Accident
                        </th>
                        <th style="width: 10%">
                            Driver Code
                        </th>
                        <th style="width: 6%">
                            Driver Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.RadioButton("AccidentClaimCheck", item.AccidentClaimId)
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.ClaimNo)
                                    @Html.ActionLink(item.ClaimNo, "ClaimDetail", "ClaimProcessing", new { item.AccidentClaimId }, new { target = "_blank", @class = "edit" })*@
                                <a href="#" style ="text-decoration:underline"  onclick="window.open('@Url.Action("ClaimDetail", "ClaimProcessing", new { item.AccidentClaimId })','popupWindow', 'width=600,height=300,top=250,left=350,scrollbars=yes');return false;">
                                    @item.ClaimNo</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VehicleNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BusServiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccidentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DriverEmployeeNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DriverName)
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}

