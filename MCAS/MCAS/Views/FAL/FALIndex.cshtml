@model  IEnumerable<MCAS.Web.Objects.MastersHelper.FALModel>
@using MCAS.Web.Objects.CommonHelper
@using MCAS.Globalisation;
@{
    ViewBag.Title = "FALIndex";
    Layout = "~/Views/Shared/_SystemAdminLayout.cshtml";
    @Html.Hidden("oldgroup", 1)
    SecurityPermissions myPemissions = (MCAS.Web.Objects.CommonHelper.SecurityPermissions)ViewData["UserPermissions"];
    System.Resources.ResourceManager PageResource = (new MCAS.Web.Objects.MastersHelper.TransactionModel()).GetResourceManager(Convert.ToString(ViewData["PageResource"]));
}
<script src='@Url.Content("~/Scripts/jquery-2.1.0.min.js")' type="text/javascript"></script>
<div class="dashboard-wrapper">
    <div class="container">
        <div class="row page-title">
            <div class="col-lg-12">
                <h2>@MCAS.Web.Objects.Resources.Common.Common.SystemAdmin</h2>
                <ul class="breadcrumb">
                    <li>@PageResource.GetString("FinanceAuthorityLimit")</li>
                </ul>
            </div>
        </div>
        <!-- Page title end -->
        <!-- Row start for sub navigation -->
        <hr />
        <!-- Row End -->
        <!-- Row start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading clearfix">
                        <i class="icon-check-sign"></i>
                        <h3 class="panel-title">@PageResource.GetString("FinanceAuthorityLimit")</h3>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="panel panel-info">
                                <div class="panel-sub-heading">
                                    <span class="text-danger">*</span> @PageResource.GetString("SearchScreen")
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("FALIndex", "FAL", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "FALIndex", name = "FALIndex" }))
                                    {
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4">@PageResource.GetString("FALLevelName")</label>
                                                    <div class="col-sm-6">
                                                    <select name="ddlFALLevelName" id="ddlFALLevelName" class="col-lg-12 form-control">
                                                        </select>
                                                        @*<input type="text" value="@ViewBag.FALLevelName" name="FALLevelName" id="FALLevelName" class="form-control" />*@
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4">@PageResource.GetString("FALAccessCategory")</label>
                                                    <div class="col-sm-6">
                                                    <select name="ddlFALAccessCat" id="ddlFALAccessCat" class="col-lg-12 form-control">
                                                        </select>
                                                       @* <input type="text" value="@ViewBag.FALAccessCategory" name="FALAccessCat" id="FALAccessCat" class="form-control" />*@
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4">@PageResource.GetString("Amount")</label>
                                                    <div class="col-sm-6">
                                                        <input type="text" value="@ViewBag.Amount" name="FALAmount" id="FALAmount" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 text-center">
                                                <button type="submit" class="btn btn-info">
                                                    @PageResource.GetString("Search")</button>
                                                &nbsp;&nbsp;&nbsp;&nbsp;
                                                @if (@myPemissions.Write)
                                                {
                                                    @Html.EncodedActionLink(@PageResource.GetString("AddNew"), "FALEditor", "FAL",new{}, new { @class = "btn btn-info" })
                                
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h4 class="text-info">@PageResource.GetString("SearchResults")
                                    </h4>
                                <hr />
                            </div>
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <div class="row-fluid">
                                        <div class="dataTables_wrapper" id="Diary_wrapper" role="grid">
                                            <table id="tableDiarySrc" cellspacing="0" width="100%" class="table table-striped table-hover display">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 20%;padding-left:9px">
                                                            @PageResource.GetString("FALLevelName")
                                                        </th>
                                                        <th style="width: 20%;padding-left:9px">
                                                            @PageResource.GetString("FALAccessCategory")
                                                        </th>
                                                        <th style="width: 20%;padding-left:9px">
                                                            @PageResource.GetString("UnlimitedAmt")
                                                        </th>
                                                        <th style="width: 20%;padding-left:9px">
                                                           @PageResource.GetString("Amount")
                                                        </th>
                                                        <th style="width: 20%">
                                                            @PageResource.GetString("Action")
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        int trid = 1;
                                                        int rowmatch = 0;
                                                        var display = "";

                                                        foreach (var item in Model)
                                                        {
                                                            rowmatch += 1;
                                                        <tr group='@(trid)' style="display:@display;">
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.FALLevelName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.FALAccessCategory)
                                                            </td>
                                                            <td >
                                                                @Html.DisplayFor(modelItem => item.UnlimitedAmt)
                                                            </td>
                                                            <td class="format">
                                                                @Html.DisplayFor(modelItem => item.Amount)
                                                            </td>
                                                            <td>
                                                                @if (@myPemissions.Write)
                                                                {
                                                                    @Html.EncodedActionLink(@PageResource.GetString("Edit"), "FALEditor", new { Id = item.FALId, pageMode = "Edit" }, new { @class = "btn btn-xs btn-warning" })
                                                                }
                                                                @if (@myPemissions.Read)
                                                                {
                                                                    @Html.EncodedActionLink(@PageResource.GetString("View"), "FALEditor", new { Id = item.FALId, pageMode = "View" }, new { @class = "btn btn-xs btn-info" })
                                                                }
                                                            </td>
                                                        </tr>
                                    
                                                        }}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(document).on("focus", ":input", function () {
            $(this).attr("autocomplete", "off")
        });
        loadFALLevelNameList();
        loadFALAccessCatList();
    });

    function loadFALLevelNameList() {
        $.ajax({
            url: '@(Url.Action("FillFALLevelNameList"))',
            cache: false,
            success: function (data) {
                $("#ddlFALLevelName").empty();
                $.each(data, function (index, optiondata) {
                    if (optiondata.FALLevelName == '@ViewBag.FALName')
                        $("#ddlFALLevelName").append("<option value='" + optiondata.FALLevelName + "' selected=selected>" + optiondata.FALLevelName + "</option>");
                    else
                        $("#ddlFALLevelName").append("<option value='" + optiondata.FALLevelName + "'>" + optiondata.FALLevelName + "</option>");
                });
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }

    function loadFALAccessCatList() {
        $.ajax({
            url: '@(Url.Action("FillFALAccessCatList"))',
            cache: false,
            success: function (data) {
                $("#ddlFALAccessCat").empty();
                $.each(data, function (index, optiondata) {
                    if (optiondata.Lookup_desc == '@ViewBag.FALCat')
                        $("#ddlFALAccessCat").append("<option value='" + optiondata.Lookup_desc + "' selected=selected>" + optiondata.Lookup_desc + "</option>");
                    else
                        $("#ddlFALAccessCat").append("<option value='" + optiondata.Lookup_desc + "'>" + optiondata.Lookup_desc + "</option>");
                });
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }
</script>